<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/add_device_dialog_bottom_radius</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="DialogAnimationUp">
        <item name="android:windowEnterAnimation">@anim/trans_bottom_to_top</item>
        <item name="android:windowExitAnimation">@anim/trans_top_to_bottom</item>
    </style>

    <style name="AlertDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Widget.Theme.AirSignal_App.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="basicTextView">
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:textColor">@color/mode_color_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="settingMultiTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:textColor">@color/mode_color_text</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="fontFamily">@font/spoqa_hansansneo_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_weight">0.5</item>
    </style>

    <style name="settingSingleTextView">
        <item name="android:layout_height">50dp</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:textColor">@color/mode_color_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="fontFamily">@font/spoqa_hansansneo_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="background">?selectableItemBackground</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="DialogAnimationSide">
        <item name="android:windowEnterAnimation">@anim/trans_right_to_left</item>
        <item name="android:windowExitAnimation">@anim/trans_left_to_right</item>
    </style>
</resources>