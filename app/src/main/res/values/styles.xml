<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="settingSingleTextView">
        <item name="android:layout_height">55dp</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:textColor">@color/theme_text_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="fontFamily">@font/spoqa_hansansneo_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="background">?selectableItemBackground</item>
    </style>

    <style name="DialogAnimationBottom">
        <item name="android:windowEnterAnimation">@anim/trans_bottom_to_top_add_group</item>
        <item name="android:windowExitAnimation">@anim/trans_top_to_bottom</item>
        <item name="background">@drawable/loc_perm_bg</item>
    </style>

    <style name="DialogAnimationMenu">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/theme_text_color</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@color/theme_view_color</item>
    </style>

    <style name="DialogAnimationMenuAnim">
        <item name="android:windowEnterAnimation">@anim/sidebar_show</item>
        <item name="android:windowExitAnimation">@anim/sidebar_hidden</item>
    </style>

    <style name="BasicImageButtonIcon" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:colorControlHighlight">@color/ripple_white</item>
    </style>

    <style name="OpenSourceMenuTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_black</item>
        <item name="android:textColorPrimary">@color/main_black</item>
        <item name="android:windowBackground">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>