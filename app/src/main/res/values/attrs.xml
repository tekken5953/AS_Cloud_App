<resources>
    <declare-styleable name="FullscreenAttrs">
        <attr name="fullscreenBackgroundColor" format="color" />
        <attr name="fullscreenTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="SettingSystemView">
        <attr name="left" format="string"/>
    </declare-styleable>

    <declare-styleable name="AirQView">
        <attr name="customSort" format="string"/>
        <attr name="customUnit" format="string"/>
    </declare-styleable>
    
    <declare-styleable name="NotiSwitchView">
        <attr name="notiTitle" format="string"/>
        <attr name="enableSubTitle" format="boolean"/>
        <attr name="topicTitle" format="string"/>
        <attr name="basicTitle" format="string"/>
    </declare-styleable>

    <declare-styleable name="SegmentSectionView">
        <attr name="section1" format="string"/>
        <attr name="section2" format="string"/>
        <attr name="section3" format="string"/>
        <attr name="weight0" format="float"/>
        <attr name="weight1" format="float"/>
        <attr name="weight2" format="float"/>
        <attr name="weight3" format="float"/>
    </declare-styleable>
</resources>