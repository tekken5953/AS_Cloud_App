<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AirSignal_App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <!-- 상태바까지 view를 보여줄 수 있다-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <!-- 풀스크린 -->
    <style name="Theme.AirSignal_App.Fullscreen" parent="Theme.AirSignal_App">
        <item name="android:actionBarStyle">@style/Widget.Theme.AirSignal_App.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.AirSignal_App.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Theme.AirSignal_App.Starting" tools:targetApi="s">
        <!-- Customize SplashScreen here. -->
        <item name="android:windowSplashScreenBackground">@color/main_blue_color</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/loading_gif</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/airsignal_logo_color</item>
    </style>
</resources>