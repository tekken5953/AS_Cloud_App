                android:alpha="1"
                app:curveFit="linear"
                app:framePosition="0"
                app:motionTarget="@id/mainLiveTempValue" />
            <KeyAttribute
                android:alpha="0"
                app:curveFit="linear"
                app:framePosition="60"
                app:motionTarget="@id/mainLiveTempValue" />
            <KeyAttribute
                android:alpha="1"
                app:curveFit="linear"
                app:framePosition="0"
                app:motionTarget="@id/mainSensValue" />
