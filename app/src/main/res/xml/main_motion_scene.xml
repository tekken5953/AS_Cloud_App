    <Transition
        app:constraintSetEnd="@+id/end"
        app:constraintSetStart="@id/start"
        app:duration="500">

        <OnClick
            app:clickAction="transitionToEnd"
            app:targetId="@id/mainMotionSLideImg"/>
    </Transition>
    <Transition
        app:constraintSetEnd="@+id/end"
        app:constraintSetStart="@id/start"
        app:duration="500">

        <OnSwipe
