<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">

        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/nested_scrollview"
            motion:touchAnchorSide="top"
            motion:onTouchUp="autoComplete"
            motion:dragScale="2"/>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/mainMotionLinear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            motion:layout_constraintBottom_toBottomOf="@id/mainMotionLayout"
            motion:layout_constraintTop_toBottomOf="@+id/topBarLinear" />
        <Constraint
            android:id="@+id/mainSkyImg"
            android:layout_width="170dp"
            android:layout_height="140dp"
            android:layout_marginBottom="12dp"
            motion:layout_constraintBottom_toTopOf="@+id/mainLiveTempUnit"
            motion:layout_constraintEnd_toEndOf="@+id/mainMotionLinear"
            motion:layout_constraintStart_toStartOf="@+id/mainMotionLinear" />
        <Constraint
            android:id="@+id/mainSkyText"
            style="@style/basicTextView"
            android:layout_marginBottom="8dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            motion:layout_constraintBottom_toTopOf="@+id/mainSkyImg"
            motion:layout_constraintEnd_toEndOf="@+id/mainMotionLinear"
            motion:layout_constraintStart_toStartOf="@+id/mainMotionLinear" />
        <Constraint
            android:id="@+id/mainLiveTempMinus"
            style="@style/basicTextView"
            android:visibility="gone"
            motion:layout_constraintTop_toTopOf="@+id/mainLiveTempValue"
            motion:layout_constraintBottom_toBottomOf="@+id/mainLiveTempValue"
            motion:layout_constraintEnd_toStartOf="@+id/mainLiveTempValue" />
        <Constraint
            android:id="@+id/mainLiveTempValue"
            style="@style/basicTextView"
            motion:layout_constraintEnd_toEndOf="@+id/mainMotionLinear"
            motion:layout_constraintStart_toStartOf="@+id/mainMotionLinear"
            motion:layout_constraintBottom_toTopOf="@+id/mainMinMaxTr"/>
        <Constraint
            android:id="@+id/mainLiveTempUnit"
            style="@style/basicTextView"
            android:text="˚"
            android:textColor="@color/white"
            android:textSize="60sp"
            motion:layout_constraintBottom_toBottomOf="@+id/mainLiveTempValue"
            motion:layout_constraintStart_toEndOf="@+id/mainLiveTempValue"
            motion:layout_constraintTop_toTopOf="@+id/mainLiveTempValue" />
        <Constraint
            android:id="@+id/mainCompareTempIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            motion:layout_constraintBottom_toBottomOf="@+id/mainLiveTempValue"
            motion:layout_constraintStart_toEndOf="@+id/mainLiveTempUnit" />
        <Constraint
            android:id="@+id/mainCompareTempTv"
            style="@style/basicTextView"
            motion:layout_constraintBottom_toBottomOf="@+id/mainLiveTempValue"
            motion:layout_constraintStart_toEndOf="@+id/mainCompareTempIv"/>
        <Constraint
            android:id="@+id/mainMinMaxTr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="35dp"
            motion:layout_constraintStart_toStartOf="@+id/mainLiveTempValue"
            motion:layout_constraintEnd_toEndOf="@+id/mainLiveTempValue"
            motion:layout_constraintTop_toTopOf="@+id/mainMotionLayout"
            motion:layout_constraintBottom_toBottomOf="@id/mainMotionLayout"/>
        <Constraint
            android:id="@+id/mainPmBoxTL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/pm_motion_box_bg"
            android:gravity="center"
            android:alpha="1"
            android:layout_marginTop="10dp"
            motion:layout_constraintTop_toBottomOf="@+id/mainNotiMsgTv"/>
<!--        <Constraint-->
<!--            android:id="@+id/bottomNav"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="0.1dp"-->
<!--            android:layout_marginBottom="3dp"-->
<!--            android:alpha="0"-->
<!--            motion:layout_constraintBottom_toBottomOf="@+id/mainMotionLayout" />-->
        <Constraint
            android:id="@+id/mainMotionSlideGuide"
            style="@style/basicTextView"
            android:layout_marginBottom="5dp"
            android:alpha="1"
            android:text="날씨 정보 더보기"
            android:textColor="@color/white"
            android:textSize="16sp"
            motion:layout_constraintBottom_toTopOf="@+id/mainMotionSLideImg"
            motion:layout_constraintEnd_toEndOf="@+id/mainMotionLinear"
            motion:layout_constraintStart_toStartOf="@+id/mainMotionLinear" />
        <Constraint
            android:id="@+id/mainMotionSLideImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:paddingBottom="15dp"
            android:src="@drawable/drop_down_bottom"
            motion:layout_constraintBottom_toBottomOf="@+id/mainMotionLinear"
            motion:layout_constraintEnd_toEndOf="@id/mainMotionLayout"
            motion:layout_constraintStart_toStartOf="@+id/mainMotionLayout" />
        <Constraint
            android:id="@+id/mainSwipeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:srlAccentColor="@color/main_blue_color"
            motion:srlEnablePreviewInEditMode="false"/>
        <Constraint
            android:id="@+id/topBarLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="@+id/mainMotionLayout"
            android:layout_marginTop="20dp" />
        <Constraint
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:alpha="0" />
        <Constraint
            android:id="@+id/mainSubWeatherTL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1"
            motion:layout_constraintTop_toBottomOf="@+id/mainPmBoxTL"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="22dp" />
        <Constraint
            android:id="@+id/mainNotiMsgTv"
            style="@style/basicTextView"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:background="@drawable/main_noti_text"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:text="오후에 비소식이 있어요"
            android:textSize="14sp"
            android:alpha="1"
            android:layout_marginTop="35dp"
            motion:layout_constraintTop_toBottomOf="@+id/mainMinMaxTr"/>
    </ConstraintSet>




    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/mainMotionLinear"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            motion:layout_constraintTop_toBottomOf="@+id/topBarLinear"/>
        <Constraint
            android:id="@+id/mainSkyImg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="40dp"
            motion:layout_constraintBottom_toBottomOf="@+id/mainMotionLinear"
            motion:layout_constraintStart_toStartOf="@+id/mainMotionLinear"
            motion:layout_constraintTop_toBottomOf="@+id/topBarLinear" />
        <Constraint
            android:id="@+id/mainSkyText"
            style="@style/basicTextView"
            android:textColor="@color/white"
            android:textSize="15sp"
            motion:layout_constraintEnd_toEndOf="@+id/mainSkyImg"
            motion:layout_constraintStart_toStartOf="@+id/mainSkyImg"
            motion:layout_constraintTop_toBottomOf="@+id/mainSkyImg" />
        <Constraint
            android:id="@+id/mainLiveTempMinus"
            style="@style/basicTextView"
            android:visibility="gone"
            motion:layout_constraintTop_toTopOf="@+id/mainLiveTempValue"
            motion:layout_constraintBottom_toBottomOf="@+id/mainLiveTempValue"
            motion:layout_constraintEnd_toStartOf="@+id/mainLiveTempValue" />
        <Constraint
            android:id="@+id/mainLiveTempValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/mainSkyImg"
            motion:layout_constraintEnd_toEndOf="@+id/mainMotionLinear"
            motion:layout_constraintStart_toEndOf="@+id/mainSkyText"
            motion:layout_constraintTop_toTopOf="@+id/mainSkyImg" />
        <Constraint
            android:id="@+id/mainLiveTempUnit"
            style="@style/basicTextView"
            android:text="˚"
            android:textColor="@color/white"
            android:textSize="45sp"
            motion:layout_constraintBottom_toBottomOf="@+id/mainLiveTempValue"
            motion:layout_constraintStart_toEndOf="@+id/mainLiveTempValue"
            motion:layout_constraintTop_toTopOf="@+id/mainLiveTempValue" />
        <Constraint
            android:id="@+id/mainCompareTempIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            motion:layout_constraintBottom_toBottomOf="@+id/mainLiveTempValue"
            motion:layout_constraintStart_toEndOf="@+id/mainLiveTempUnit"/>
        <Constraint
            android:id="@+id/mainCompareTempTv"
            style="@style/basicTextView"
            motion:layout_constraintBottom_toBottomOf="@+id/mainLiveTempValue"
            motion:layout_constraintStart_toEndOf="@+id/mainCompareTempIv"/>
        <Constraint
            android:id="@+id/mainMinMaxTr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            motion:layout_constraintTop_toBottomOf="@+id/mainLiveTempValue"/>
        <Constraint
            android:id="@+id/mainPmBoxTL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:alpha="0"
            android:background="@drawable/pm_motion_box_bg"
            android:gravity="center"
            motion:layout_constraintTop_toBottomOf="@+id/mainMinMaxTr" />

<!--        <Constraint-->
<!--            android:id="@+id/bottomNav"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="55dp"-->
<!--            android:alpha="1"-->
<!--            motion:layout_constraintBottom_toBottomOf="@+id/mainMotionLayout" />-->

        <Constraint
            android:id="@+id/mainMotionSlideGuide"
            style="@style/basicTextView"
            android:layout_marginBottom="5dp"
            android:alpha="0"
            android:text="날씨 정보 더보기"
            android:textColor="@color/white"
            android:textSize="16sp"
            motion:layout_constraintBottom_toTopOf="@+id/mainMotionSLideImg"
            motion:layout_constraintEnd_toEndOf="@+id/mainMotionLinear"
            motion:layout_constraintStart_toStartOf="@+id/mainMotionLinear" />

        <Constraint
            android:id="@+id/mainMotionSLideImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:paddingBottom="15dp"
            android:src="@drawable/drop_down_bottom"
            motion:layout_constraintBottom_toBottomOf="@+id/mainMotionLinear"
            motion:layout_constraintEnd_toEndOf="@id/mainMotionLayout"
            motion:layout_constraintStart_toStartOf="@+id/mainMotionLayout" />
        <Constraint
            android:id="@+id/mainSwipeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:srlAccentColor="@color/main_blue_color"
            motion:srlEnablePreviewInEditMode="false"/>
        <Constraint
            android:id="@+id/topBarLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@+id/mainMotionLayout"/>
        <Constraint
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:alpha="1" />
        <Constraint
            android:id="@+id/mainSubWeatherTL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/mainPmBoxTL"
            android:alpha="0"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp" />
        <Constraint
            android:id="@+id/mainNotiMsgTv"
            android:layout_width="match_parent"
            android:alpha="0"
            motion:layout_constraintBottom_toTopOf="@+id/mainPmBoxTL"/>
    </ConstraintSet>
</MotionScene>