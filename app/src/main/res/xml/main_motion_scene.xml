                android:alpha="0"
                app:curveFit="linear"
                app:framePosition="60"
                app:motionTarget="@id/mainSensValue" />
            <KeyAttribute
                android:alpha="1"
                app:curveFit="linear"
                app:framePosition="0"
                app:motionTarget="@id/mainSensTitle" />
            <KeyAttribute
                android:alpha="0"
                app:curveFit="linear"
                app:framePosition="60"
                app:motionTarget="@id/mainSensTitle" />
            <KeyAttribute
                android:alpha="1"
                app:curveFit="linear"
                app:framePosition="0"
                app:motionTarget="@id/mainLiveTempUnit" />
            <KeyAttribute
                android:alpha="0"
                app:curveFit="linear"
                app:framePosition="60"
                app:motionTarget="@id/mainLiveTempUnit" />



            <KeyAttribute
                android:alpha="0"
                app:curveFit="linear"
                app:framePosition="60"
                app:motionTarget="@id/mainMinMaxValueC" />
            <KeyAttribute
                android:alpha="1"
                app:curveFit="linear"
                app:framePosition="99"
                app:motionTarget="@id/mainMinMaxValueC" />
            <KeyAttribute
                android:alpha="0"
                app:curveFit="linear"
                app:framePosition="60"
                app:motionTarget="@id/mainMinMaxTitleC" />
            <KeyAttribute
                android:alpha="0.8"
                app:curveFit="linear"
                app:framePosition="99"
                app:motionTarget="@id/mainMinMaxTitleC" />
            <KeyAttribute
                android:alpha="0"
                app:curveFit="linear"
                app:framePosition="60"
                app:motionTarget="@id/mainLiveTempValueC" />
            <KeyAttribute
                android:alpha="1"
                app:curveFit="linear"
                app:framePosition="99"
                app:motionTarget="@id/mainLiveTempValueC" />
            <KeyAttribute
                android:alpha="0"
                app:curveFit="linear"
                app:framePosition="60"
                app:motionTarget="@id/mainLiveTempTitleC" />
            <KeyAttribute
                android:alpha="0.8"
                app:curveFit="linear"
                app:framePosition="99"
                app:motionTarget="@id/mainLiveTempTitleC" />
            <KeyAttribute
                android:alpha="0"
                app:curveFit="linear"
