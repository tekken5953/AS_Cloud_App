<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background">
        <shape>
            <gradient android:startColor="#6083D3F5"
                android:centerColor="#4083D3F5"
                android:centerX="0.44"
                android:endColor="#20E0F5FE"
                android:angle="315"/>
            <corners android:radius="12dp" />
            <stroke
                android:width="7dp"
                android:color="@color/theme_view_color" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="12dp" />
                <gradient android:startColor="#83D3F5"
                    android:centerColor="#83D3F5"
                    android:centerX="0.55"
                    android:endColor="#E0F5FE"
                    android:angle="315"/>
                <stroke
                    android:width="7dp"
                    android:color="@color/theme_view_color" />
            </shape>
        </clip>
    </item>
</layer-list>