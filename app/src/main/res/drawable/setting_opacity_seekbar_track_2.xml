<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background">
        <shape>
            <gradient android:startColor="#601A0C23"
                android:centerColor="#40124E6A"
                android:centerX="0.55"
                android:endColor="#20124E6A"
                android:angle="315"/>
            <corners android:radius="12dp" />
            <stroke
                android:width="7dp"
                android:color="@color/theme_view_color" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="12dp" />
                <gradient android:startColor="#1A0C23"
                    android:centerColor="#124E6A"
                    android:centerX="0.55"
                    android:endColor="#124E6A"
                    android:angle="315"/>
                <stroke
                    android:width="7dp"
                    android:color="@color/theme_view_color" />
            </shape>
        </clip>
    </item>
</layer-list>