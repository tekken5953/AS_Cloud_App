<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/ripple_white"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <selector>
            <item android:state_activated="false">
                <shape>
                    <solid
                        android:color="@color/ae_sub_color"/>
                    <corners
                        android:radius="10dp"/>
                </shape>
            </item>
            <item android:state_activated="true">
                <shape>
                    <solid
                        android:color="#5CC4FF"/>
                    <corners
                        android:radius="10dp"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>