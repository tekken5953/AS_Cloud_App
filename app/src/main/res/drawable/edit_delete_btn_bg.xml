<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/theme_text_color"/>
            <corners android:radius="60dp"/>
            <padding android:bottom="2dp" android:left="2dp"
                android:right="2dp" android:top="2dp"/>
            <size android:width="40dp" android:height="35dp"/>

        </shape>
    </item>

    <item android:state_selected="false">
        <shape>
            <solid android:color="@color/theme_sub_color"/>
            <corners android:radius="60dp"/>
            <padding android:bottom="2dp" android:left="2dp"
                android:right="2dp" android:top="2dp"/>
            <size android:width="40dp" android:height="35dp"/>

        </shape>
    </item>
</selector>
