<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/noiseDetailHeaderContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <View
            android:id="@+id/noiseDetailHeaderLine1"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="0.4"
            android:background="@drawable/noise_detail_line_bg"
            android:layerType="software" />

        <TextView
            android:id="@+id/noiseDetailHeaderTitle"
            style="@style/basicMediumTextView"
            android:layout_weight="0.2"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/eye_graph_gray"
            android:textSize="14sp" />

        <View
            android:id="@+id/noiseDetailHeaderLine2"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="0.4"
            android:background="@drawable/noise_detail_line_bg"
            android:layerType="software" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/noiseDetailDataContainer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/noiseDetailHeaderContainer"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/noiseDetailTime"
            style="@style/basicTextView"
            android:layout_weight="0.4"
            android:gravity="start"
            android:textColor="@color/eye_graph_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/noiseDetailValue"
            style="@style/basicTextView"
            android:layout_weight="0.6"
            android:gravity="start"
            android:textColor="@color/main_black"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>