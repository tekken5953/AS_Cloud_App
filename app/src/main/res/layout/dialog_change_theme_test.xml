<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_view_color">

    <RelativeLayout
        android:id="@+id/changeThemeTopBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/changeThemeBack"
            style="@style/BasicImageButtonIcon"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/back_arrow"
            app:tint="@color/theme_text_color" />

        <TextView
            style="@style/basicMediumTextView"
            android:layout_centerInParent="true"
            android:text="@string/setting_theme_left"
            android:textColor="@color/theme_text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/changeThemeApply"
            style="@style/basicMediumTextView"
            android:text="적용"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textColor="@color/main_blue_color"
            android:layout_marginEnd="20dp"/>

    </RelativeLayout>

    <RadioGroup
        android:id="@+id/changeThemeRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/changeThemeTopBar">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioButton
                android:id="@+id/themeSystemRB"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/radio_group_bg"
                android:backgroundTint="@color/main_blue_color"
                android:fontFamily="@font/spoqa_hansansneo_regular"
                android:gravity="top|start"
                android:letterSpacing="-0.04"
                android:paddingTop="7dp"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:text="@string/theme_system"
                android:textColor="@color/white"
                android:buttonTint="@color/white"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/themeLightRB"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/radio_group_bg"
                android:backgroundTint="@color/theme_view_color"
                android:fontFamily="@font/spoqa_hansansneo_regular"
                android:gravity="top|start"
                android:letterSpacing="-0.04"
                android:paddingTop="7dp"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:layout_marginTop="220dp"
                android:text="@string/theme_light"
                android:textColor="@color/theme_text_color"
                android:buttonTint="@color/theme_text_color"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/themeDarkRB"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/radio_group_bg"
                android:backgroundTint="@color/theme_text_color"
                android:fontFamily="@font/spoqa_hansansneo_regular"
                android:gravity="top|start"
                android:letterSpacing="-0.04"
                android:paddingTop="7dp"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:text="@string/theme_dark"
                android:layout_marginTop="440dp"
                android:textColor="@color/theme_view_color"
                android:buttonTint="@color/theme_view_color"
                android:textSize="16sp" />
        </FrameLayout>


    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>