<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.gms.ads.nativead.NativeAdView
        android:id="@+id/exitNativeAdView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        ads:adUnitId="@string/adUnit_exit_Id"
        ads:layout_constraintBottom_toTopOf="@+id/exitButtonTr"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/nativeAdDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top" />

        <TextView
            android:id="@+id/nativeAdTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center" />
    </com.google.android.gms.ads.nativead.NativeAdView>

    <TableRow
        android:id="@+id/exitButtonTr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exitNativeAdView">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/exitNoBtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:backgroundTint="@color/main_blue_color"
            android:text="@string/cancel"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/exitYesBtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_weight="0.5"
            android:text="@string/exit" />
    </TableRow>


</androidx.constraintlayout.widget.ConstraintLayout>