<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mode_color_view">

    <ImageView
        android:id="@+id/changeScaleBack"
        style="@style/BasicImageButtonIcon"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/changeScaleTitle"
        style="@style/basicTextView"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/spoqa_hansansneo_regular"
        android:text="@string/font_scale"
        android:textColor="@color/mode_color_text"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/changeScaleBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/changeScaleBack" />

    <RadioGroup
        android:id="@+id/changeScaleRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/changeScaleTitle">

        <RadioButton
            android:id="@+id/scaleSmallRB"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="?selectableItemBackground"
            android:button="@null"
            android:drawableEnd="@drawable/check_small"
            android:drawableTint="@android:color/transparent"
            android:fontFamily="@font/spoqa_hansansneo_regular"
            android:gravity="center_vertical"
            android:letterSpacing="-0.04"
            android:paddingStart="24dp"
            android:paddingTop="5dp"
            android:paddingEnd="24dp"
            android:scaleY="0.7"
            android:text="@string/font_small"
            android:textColor="@drawable/radio_text_selector"
            android:textScaleX="0.7"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/scaleDefaultRB"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="?selectableItemBackground"
            android:button="@null"
            android:drawableEnd="@drawable/check_small"
            android:drawableTint="@android:color/transparent"
            android:fontFamily="@font/spoqa_hansansneo_regular"
            android:gravity="center_vertical"
            android:letterSpacing="-0.04"
            android:paddingStart="24dp"
            android:paddingTop="5dp"
            android:paddingEnd="24dp"
            android:text="@string/font_normal"
            android:textColor="@drawable/radio_text_selector"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/scaleBigRB"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="?selectableItemBackground"
            android:button="@null"
            android:drawableEnd="@drawable/check_small"
            android:drawableTint="@android:color/transparent"
            android:fontFamily="@font/spoqa_hansansneo_regular"
            android:gravity="center_vertical"
            android:letterSpacing="-0.04"
            android:paddingStart="24dp"
            android:paddingTop="5dp"
            android:paddingEnd="24dp"
            android:scaleY="1.3"
            android:text="@string/font_large"
            android:textColor="@drawable/radio_text_selector"
            android:textScaleX="1.3"
            android:textSize="16sp" />
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>