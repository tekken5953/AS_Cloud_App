<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/help"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="7dp"
            android:layout_marginTop="7dp"
            app:tint="@color/white"/>

        <com.triggertrap.seekarc.SeekArc
            android:id="@+id/listItemNestedAirPb"
            style="@style/ProgressBarHorizontal"
            android:layout_width="102dp"
            android:layout_height="102dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="14dp"
            android:padding="15dp"
            app:arcColor="#16435C"
            app:arcWidth="5.5dp"
            app:enabled="false"
            app:layout_constraintBottom_toTopOf="@+id/listItemNestedAirTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:progress="80"
            app:progressColor="#5CC4FF"
            app:progressWidth="5.5dp"
            app:roundEdges="true"
            app:startAngle="160"
            app:touchInside="false" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/listItemNestedAirPb"
            app:layout_constraintEnd_toEndOf="@+id/listItemNestedAirPb"
            app:layout_constraintStart_toStartOf="@+id/listItemNestedAirPb"
            app:layout_constraintTop_toTopOf="@+id/listItemNestedAirPb">

            <TextView
                android:id="@+id/listItemNestedAirGrade"
                style="@style/basicMediumTextView"
                android:text="매우나쁨"
                android:textColor="#5CC4FF"
                android:autoSizeMaxTextSize="16sp"/>

            <TextView
                android:id="@+id/listItemNestedAirValue"
                style="@style/basicTextView"
                android:text="8.8888"
                android:textColor="#5CC4FF"
                android:autoSizeMaxTextSize="14sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/listItemNestedAirTitle"
            style="@style/basicMediumTextView"
            android:layout_marginBottom="16dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
