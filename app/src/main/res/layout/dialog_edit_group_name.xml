<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:background="@drawable/ae_device_bg_e">

    <TextView
        android:id="@+id/dialogEditGroupNameTitle"
        style="@style/basicTextView"
        android:text="그룹명"
        android:textColor="@color/main_black"
        android:layout_marginStart="4dp"
        android:textSize="14sp"
        android:layout_marginTop="35dp"/>

    <EditText
        android:id="@+id/dialogEditGroupNameEt"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="5dp"
        android:textColorHint="@color/eye_graph_gray"
        android:background="@drawable/eye_et_enable_bg"
        app:tint="@color/main_black"
        android:fontFamily="@font/spoqa_hansansneo_medium"
        android:inputType="text"
        android:paddingStart="15dp"
        android:visibility="visible"
        android:cursorVisible="false"
        android:paddingEnd="15dp"
        android:textAllCaps="false"
        android:textColor="@color/main_black"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="30dp"
        android:gravity="top">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialogEditGroupNameBtn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/btn_blue_selector"
            android:enabled="false"
            android:fontFamily="@font/spoqa_hansansneo_bold"
            android:text="변경하기"
            android:visibility="visible"
            android:textColor="@color/eye_btn_disable_color"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>