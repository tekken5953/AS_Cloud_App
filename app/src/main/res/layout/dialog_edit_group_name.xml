<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="280dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/ae_device_bg_e">

    <ImageView
        android:id="@+id/dialogEditGroupNameCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cancel_round"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"/>

    <TextView
        android:id="@+id/dialogEditGroupNameTitle"
        style="@style/basicTextView"
        android:text="변경할 그룹명을 입력해주세요"
        android:textColor="@color/main_black"
        android:layout_below="@+id/dialogEditGroupNameCancel"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>

    <EditText
        android:id="@+id/dialogEditGroupNameEt"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/eye_graph_gray"
        android:background="@drawable/eye_et_enable_bg"
        app:tint="@color/main_black"
        android:fontFamily="@font/spoqa_hansansneo_medium"
        android:inputType="text"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@+id/dialogEditGroupNameTitle"
        android:paddingStart="15dp"
        android:visibility="visible"
        android:cursorVisible="false"
        android:paddingEnd="15dp"
        android:textAllCaps="false"
        android:textColor="@color/main_black"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/dialogEditGroupNameEt"
        android:gravity="top|center_horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialogEditGroupNameBtn"
            android:layout_width="144dp"
            android:layout_height="56dp"
            android:background="@drawable/btn_blue_selector"
            android:enabled="false"
            android:fontFamily="@font/spoqa_hansansneo_bold"
            android:text="변경하기"
            android:visibility="visible"
            android:textColor="@color/eye_btn_disable_color"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>