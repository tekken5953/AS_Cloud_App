<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <data/>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:clickable="false"
        android:focusable="false"
        android:background="@android:color/transparent"
        tools:context=".view.activity.MainActivity">

        <ImageView
            android:id="@+id/customSubAirImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/customSubAirValue"
            style="@style/basicMediumTextView"
            android:textSize="15sp"
            android:maxLines="1"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="13sp"
            android:autoSizeMaxTextSize="15sp"
            android:layout_below="@+id/customSubAirImg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:drawablePadding="2dp"
            android:textColor="@color/theme_text_color"/>

        <TextView
            android:id="@+id/customSubAirTitle"
            style="@style/basicTextView"
            android:layout_below="@+id/customSubAirValue"
            android:autoSizeMaxTextSize="13sp"
            android:textSize="12sp"
            android:layout_marginTop="6dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/theme_text_color"/>
    </RelativeLayout>
</layout>
