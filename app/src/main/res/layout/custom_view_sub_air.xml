<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <data/>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="138dp"
        android:paddingTop="28dp"
        android:paddingBottom="23dp"
        tools:context=".view.activity.MainActivity">

        <ImageView
            android:id="@+id/customSubAirImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ico_main_humidity"/>

        <TextView
            android:id="@+id/customSubAirTitle"
            style="@style/basicTextView"
            android:layout_below="@+id/customSubAirImg"
            android:autoSizeMaxTextSize="14sp"
            android:textSize="13sp"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:textColor="#7C7C7C"/>

        <TextView
            android:id="@+id/customSubAirValue"
            style="@style/basicMediumTextView"
            android:layout_below="@+id/customSubAirTitle"
            android:textSize="17sp"
            android:autoSizeMaxTextSize="18sp"
            android:layout_marginStart="43dp"
            android:layout_marginEnd="43dp"
            android:layout_marginTop="8dp"
            android:textColor="#4F4F4F"/>

        <View
            android:id="@+id/customSubAirLeftLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:background="#D9D9D9"/>

    </RelativeLayout>
</layout>
