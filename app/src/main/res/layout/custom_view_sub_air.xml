<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data/>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="17dp"
        android:clickable="false"
        android:focusable="false"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/customSubAirImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/customSubAirValue"
            style="@style/basicMediumTextView"
            android:layout_width="match_parent"
            android:gravity="center"
            android:maxLines="2"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="14sp"
            android:autoSizeMaxTextSize="16sp"
            android:layout_below="@+id/customSubAirImg"
            android:layout_centerInParent="true"
            android:layout_marginEnd="8dp"
            android:textColor="@color/theme_text_color"/>

        <TextView
            android:id="@+id/customSubAirTitle"
            style="@style/basicTextView"
            android:layout_below="@+id/customSubAirValue"
            android:autoSizeMaxTextSize="13sp"
            android:textSize="12sp"
            android:layout_marginTop="6dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/theme_text_color"/>
    </RelativeLayout>
</layout>