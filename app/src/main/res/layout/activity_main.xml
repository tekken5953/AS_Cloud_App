        <ScrollView
            android:id="@+id/nested_scrollview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/mainMotionLinear">

            <TextView
                android:id="@+id/nested_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/large_text"
                android:textColor="@color/black" />

        </ScrollView>

        <LinearLayout
            android:id="@+id/mainMotionLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:alpha="0"
            app:itemIconTint="@color/main_blue_color"
            app:itemTextColor="@color/main_blue_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/bottom_nav" />

        <ImageView
            android:id="@+id/mainSideMenuIv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="30dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="5dp"
            android:src="@drawable/options_menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/mainGpsTitleTv"
            style="@style/basicTextView"
            android:drawablePadding="5dp"
            android:fontFamily="@font/spoqa_hansansneo_regular"
            android:paddingStart="10dp"
            android:paddingEnd="2dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:drawableEndCompat="@drawable/bottom_arrow"
            app:drawableStartCompat="@drawable/gps"
            app:drawableTint="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/mainSideMenuIv"
            app:layout_constraintEnd_toEndOf="@+id/mainMotionLinear"
            app:layout_constraintStart_toStartOf="@+id/mainMotionLinear"
            app:layout_constraintTop_toTopOf="@+id/mainSideMenuIv" />

        <ImageView
            android:id="@+id/mainGpsFix"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="24dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="5dp"
            android:src="@drawable/fixed_gps"
            app:layout_constraintBottom_toBottomOf="@+id/mainSideMenuIv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mainSideMenuIv"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/mainSkyImg"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginBottom="19dp"
            android:src="@drawable/sunny_test"
            app:layout_constraintBottom_toTopOf="@+id/mainSkyText"
            app:layout_constraintEnd_toEndOf="@+id/mainMotionLinear"
            app:layout_constraintStart_toStartOf="@+id/mainMotionLinear"
            app:layout_constraintTop_toBottomOf="@+id/mainGpsFix" />

        <TextView
            android:id="@+id/mainSkyText"
            style="@style/basicTextView"
            android:layout_marginBottom="21dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/mainLiveTempValue"
            app:layout_constraintEnd_toEndOf="@+id/mainMotionLinear"
            app:layout_constraintStart_toStartOf="@+id/mainMotionLinear" />

        <TextView
            android:id="@+id/mainLiveTempValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqa_hansansneo_bold"
            android:textColor="@color/white"
            android:textSize="60sp"
            app:layout_constraintBottom_toBottomOf="@+id/mainMotionLinear"
            app:layout_constraintEnd_toEndOf="@+id/mainMotionLinear"
            app:layout_constraintStart_toStartOf="@+id/mainMotionLinear"
            app:layout_constraintTop_toTopOf="@+id/mainMotionLinear" />

        <TextView
            android:id="@+id/mainLiveTempUnit"
            style="@style/basicTextView"
            android:text="˚"
            android:textColor="@color/white"
            android:textSize="60sp"
            app:layout_constraintBottom_toBottomOf="@+id/mainLiveTempValue"
            app:layout_constraintStart_toEndOf="@+id/mainLiveTempValue"
            app:layout_constraintTop_toTopOf="@+id/mainLiveTempValue" />

        <TextView
            android:id="@+id/mainCompareTemp"
            style="@style/basicTextView"
            android:drawablePadding="2dp"
            android:gravity="top"
            android:paddingBottom="10dp"
            android:text="5˚"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/arrow_down"
            app:layout_constraintBottom_toBottomOf="@+id/mainLiveTempValue"
            app:layout_constraintStart_toEndOf="@+id/mainLiveTempUnit" />

        <TableRow
            android:id="@+id/mainMinMaxTr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/mainLiveTempValue">

            <TextView
                android:id="@+id/mainMinMaxMin"
                style="@style/basicTextView"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                style="@style/basicTextView"
                android:text="  ─  "
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/mainMinMaxMax"
                style="@style/basicTextView"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </TableRow>

        <TableLayout
            android:id="@+id/mainPmBoxTL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/pm_motion_box_bg"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/mainMinMaxTr">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    style="@style/basicTextView"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/spoqa_hansansneo_bold"
                    android:text="@string/pm_10"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/basicTextView"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/spoqa_hansansneo_bold"
                    android:text="@string/pm_2p5"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center">

                <com.aslib.AsTextView
                    android:id="@+id/mainPm10Grade"
                    style="@style/basicTextView"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/spoqa_hansansneo_regular"
                    android:textColor="@color/progressWorst"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:sort="grade" />

                <com.aslib.AsTextView
                    android:id="@+id/mainPm2p5Grade"
                    style="@style/basicTextView"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/spoqa_hansansneo_regular"
                    android:textColor="@color/progressGood"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:sort="grade" />
            </TableRow>

            <com.example.airsignal_app.view.SegmentedProgressBar
                android:id="@+id/segment_progress_bar"
                android:layout_width="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="5dp"
                android:layout_height="10dp" />
        </TableLayout>

        <TextView
            android:id="@+id/mainMotionSlideGuide"
            style="@style/basicTextView"
            android:text="날씨 정보 더보기"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/mainMotionSLideImg"
            app:layout_constraintEnd_toEndOf="@+id/mainMotionLinear"
            app:layout_constraintStart_toStartOf="@+id/mainMotionLinear" />

        <ImageView
            android:id="@+id/mainMotionSLideImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:src="@drawable/drop_down_bottom"
            app:layout_constraintBottom_toBottomOf="@+id/mainMotionLinear"
            app:layout_constraintEnd_toEndOf="@id/mainMotionLayout"
            app:layout_constraintStart_toStartOf="@+id/mainMotionLayout"/>
    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>
