            android:textColor="#3D3D3D"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            ads:layout_constraintTop_toBottomOf="@+id/mainLiveTempValue"
            ads:layout_constraintEnd_toEndOf="@+id/mainMinMaxTitle"/>

        <TextView
            android:id="@+id/mainSensValue"
            style="@style/basicTextView"
            android:layout_marginTop="12dp"
            android:textColor="#3D3D3D"
            android:textSize="16sp"
            ads:layout_constraintEnd_toStartOf="@+id/mainLiveTempUnit"
            ads:layout_constraintTop_toBottomOf="@+id/mainLiveTempValue" />

        <TextView
            android:id="@+id/mainMinMaxTitle"
            style="@style/basicMediumTextView"
            android:layout_marginEnd="22dp"
            android:textColor="#3D3D3D"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/mainMinMaxValue"
            app:layout_constraintEnd_toStartOf="@id/mainMinMaxValue"
            app:layout_constraintTop_toTopOf="@+id/mainMinMaxValue" />

        <TextView
            android:id="@+id/mainMinMaxValue"
