            android:layout_marginTop="4dp"
            android:textColor="#3D3D3D"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/mainLiveTempUnit"
            app:layout_constraintTop_toBottomOf="@+id/mainSensValue" />

        <TextView
            android:id="@+id/mainMotionSlideGuide"
            style="@style/basicTextView"
            android:layout_marginBottom="5dp"
            android:text="@string/slide_more"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/mainMotionSLideImg"
            app:layout_constraintEnd_toEndOf="@+id/mainMotionLinear"
            app:layout_constraintStart_toStartOf="@+id/mainMotionLinear" />

        <ImageView
            android:id="@+id/mainMotionSLideImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:src="@drawable/drop_down_bottom"
            app:layout_constraintBottom_toBottomOf="@+id/mainMotionLinear"
            app:layout_constraintEnd_toEndOf="@id/mainMotionLayout"
            app:layout_constraintStart_toStartOf="@+id/mainMotionLayout"
            app:tint="@color/black" />


        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scrollview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="-25dp"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mainMotionLinear">

            <RelativeLayout
                android:id="@+id/nested_main_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/theme_main_bg_color"
                android:paddingBottom="55dp">

                <com.example.airsignal_app.view.custom_view.AirQView
                    android:id="@+id/nested_air_help_popup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_alignTop="@+id/nested_air_box"
                    android:layout_centerHorizontal="true"
                    android:alpha="0"
                    android:background="@drawable/help_bg"
                    android:elevation="3dp"
                    android:translationZ="2dp"
                    android:gravity="center_horizontal" />

                <RelativeLayout
                    android:id="@+id/nested_subAir_frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/scrolled_box_bg">

                    <com.example.airsignal_app.view.custom_view.SubAirView
                        android:id="@+id/subAirHumid"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toStartOf="@+id/subAirWind"
                        ads:customImg="@drawable/ico_main_humidity"
                        ads:customTitle="@string/humidity"
                        ads:isLeftLine="false"/>

                    <com.example.airsignal_app.view.custom_view.SubAirView
                        android:id="@+id/subAirWind"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        ads:customImg="@drawable/ico_main_wind"
                        ads:customTitle="@string/wind"
                        ads:isLeftLine="true"/>

                    <com.example.airsignal_app.view.custom_view.SubAirView
                        android:id="@+id/subAirRainP"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@+id/subAirWind"
                        ads:customImg="@drawable/ico_main_rain"
                        ads:customTitle="@string/rainPer"
                        ads:isLeftLine="true"/>
                </RelativeLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/nested_report_frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nested_subAir_frame"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/report_frame_bg"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical"
                    android:scrollIndicators="bottom"
                    android:visibility="gone">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/nested_report_viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="20dp"
                        android:animateLayoutChanges="true" />

                    <LinearLayout
                        android:id="@+id/nested_report_indicator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:clickable="false"
                        android:gravity="center"
                        android:orientation="horizontal" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <RelativeLayout
                    android:id="@+id/nested_daily_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nested_report_frame"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/scrolled_box_bg">

                    <TextView
                        android:id="@+id/mainDailyWeatherTitle"
                        style="@style/basicMediumTextView"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="24dp"
                        android:drawablePadding="5dp"
                        android:text="@string/daily_weather"
                        android:textColor="@color/theme_text_color"
                        android:textSize="18sp"
                        app:drawableStartCompat="@drawable/ico_time" />

                    <TableRow
                        android:id="@+id/mainDailyWeatherSectionTR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignBottom="@+id/mainDailyWeatherTitle"
                        android:layout_marginEnd="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/dailySectionToday"
                            style="@style/basicTextView"
                            android:text="@string/daily_today"
                            android:textColor="@color/main_black_color"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/dailySectionTomorrow"
                            style="@style/basicTextView"
                            android:layout_marginStart="12dp"
                            android:text="@string/daily_tomorrow"
                            android:textColor="@color/main_black_color"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/dailySectionAfterTomorrow"
                            style="@style/basicTextView"
                            android:layout_marginStart="12dp"
                            android:text="@string/daily_next_tomorrow"
                            android:textColor="@color/main_black_color"
                            android:textSize="16sp" />
                    </TableRow>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/mainDailyWeatherRv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/mainDailyWeatherTitle"
                        android:layout_marginTop="9dp"
                        android:clipToPadding="false"
                        android:orientation="horizontal"
                        android:overScrollMode="never"
                        android:paddingStart="13dp"
                        android:paddingEnd="15dp"
                        android:layout_marginStart="5dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/list_item_daily_weather" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/adViewBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nested_daily_box"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="12dp"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/uv_box_bg"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/adViewCancelIv"
                        android:layout_width="17dp"
