            app:layout_constraintEnd_toStartOf="@+id/mainLiveTempValue"
            app:layout_constraintBottom_toBottomOf="@+id/mainLiveTempValue"/>

        <TextView
            android:id="@+id/mainSensValueC"
            style="@style/basicMediumTextView"
            android:layout_marginStart="17dp"
            android:textSize="18sp"
            android:alpha="0"
            app:layout_constraintEnd_toStartOf="@+id/mainLiveTempValue"
            app:layout_constraintBottom_toBottomOf="@+id/mainLiveTempValue"/>

        <TextView
            android:id="@+id/mainMinMaxTitleC"
            style="@style/basicTextView"
            android:layout_marginStart="17dp"
            android:textSize="14sp"
            android:text="@string/min_max"
            android:alpha="0"
            app:layout_constraintEnd_toStartOf="@+id/mainLiveTempValue"
            app:layout_constraintBottom_toBottomOf="@+id/mainLiveTempValue"/>

        <TextView
            android:id="@+id/mainMinMaxValueC"
            style="@style/basicMediumTextView"
            android:layout_marginStart="17dp"
            android:textSize="18sp"
            android:alpha="0"
            app:layout_constraintEnd_toStartOf="@+id/mainLiveTempValue"
            app:layout_constraintBottom_toBottomOf="@+id/mainLiveTempValue"/>

        <TextView
            android:id="@+id/mainLiveTempUnit"
            style="@style/basicTextView"
            android:layout_marginStart="2dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="24dp"
            android:paddingTop="5dp"
            android:textColor="@color/mode_black_color"
            android:textSize="57sp"
            app:layout_constraintEnd_toEndOf="@+id/mainMotionLayout"
