<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="dataVM"
            type="com.example.airsignal_app.vmodel.GetWeatherViewModel" />
    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/mainMotionLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bg"
        app:layoutDescription="@xml/main_motion_scene"
        app:layout_scrollFlags="scroll">

        <ScrollView
            android:id="@+id/nested_scrollview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/mainMotionLinear"
            app:layout_constraintBottom_toTopOf="@+id/bottomNav">

            <TextView
                android:id="@+id/nested_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/large_text"
                android:textColor="@color/black" />

        </ScrollView>

        <LinearLayout
            android:id="@+id/mainMotionLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:menu="@menu/bottom_nav"
            app:itemTextColor="@color/main_blue_color"
            app:itemIconTint="@color/main_blue_color"
            app:layout_constraintBottom_toBottomOf="@+id/mainMotionLayout"/>

        <ImageView
            android:id="@+id/mainSideMenuIv"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="30dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="5dp"
            android:src="@drawable/options_menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/mainGpsTitleTv"
            style="@style/basicTextView"
            android:drawablePadding="5dp"
            android:fontFamily="@font/spoqa_hansansneo_regular"
            android:paddingStart="10dp"
            android:paddingEnd="2dp"
            android:textColor="@color/white"
            android:text="분당구 야탑동"
            android:textSize="16sp"
            app:drawableTint="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/mainSideMenuIv"
            app:layout_constraintEnd_toEndOf="@+id/mainMotionLinear"
            app:layout_constraintStart_toStartOf="@+id/mainMotionLinear"
            app:layout_constraintTop_toTopOf="@+id/mainSideMenuIv"
            app:drawableStartCompat="@drawable/gps"
            app:drawableEndCompat="@drawable/bottom_arrow" />

        <ImageView
            android:id="@+id/mainGpsFix"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginEnd="24dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="5dp"
            android:src="@drawable/fixed_gps"
            app:layout_constraintBottom_toBottomOf="@+id/mainSideMenuIv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mainSideMenuIv"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/mainSkyImg"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginBottom="19dp"
            android:src="@drawable/sunny_test"
            app:layout_constraintTop_toBottomOf="@+id/mainGpsFix"
            app:layout_constraintBottom_toTopOf="@+id/mainSkyText"
            app:layout_constraintEnd_toEndOf="@+id/mainMotionLinear"
            app:layout_constraintStart_toStartOf="@+id/mainMotionLinear" />

        <TextView
            android:id="@+id/mainSkyText"
            style="@style/basicTextView"
            android:layout_marginBottom="21dp"
            android:text="구름 많음"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/mainLiveTempValue"
            app:layout_constraintEnd_toEndOf="@+id/mainMotionLinear"
            app:layout_constraintStart_toStartOf="@+id/mainMotionLinear" />

        <TextView
            android:id="@+id/mainLiveTempValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqa_hansansneo_bold"
            android:text="23"
            android:textColor="@color/white"
            android:textSize="60sp"
            app:layout_constraintBottom_toBottomOf="@+id/mainMotionLinear"
            app:layout_constraintEnd_toEndOf="@+id/mainMotionLinear"
            app:layout_constraintStart_toStartOf="@+id/mainMotionLinear"
            app:layout_constraintTop_toTopOf="@+id/mainMotionLinear" />

        <TextView
            android:id="@+id/mainLiveTempUnit"
            style="@style/basicTextView"
            android:text="˚"
            android:textColor="@color/white"
            android:textSize="60sp"
            app:layout_constraintBottom_toBottomOf="@+id/mainLiveTempValue"
            app:layout_constraintStart_toEndOf="@+id/mainLiveTempValue"
            app:layout_constraintTop_toTopOf="@+id/mainLiveTempValue" />

        <TextView
            android:id="@+id/mainCompareTemp"
            style="@style/basicTextView"
            android:drawablePadding="2dp"
            android:paddingBottom="10dp"
            android:text="5˚"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="top"
            app:layout_constraintBottom_toBottomOf="@+id/mainLiveTempValue"
            app:layout_constraintStart_toEndOf="@+id/mainLiveTempUnit"
            app:drawableStartCompat="@drawable/arrow_down" />

        <TableRow
            android:id="@+id/mainMinMaxTr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/mainLiveTempValue">

            <TextView
                android:id="@+id/mainMinMaxMin"
                style="@style/basicTextView"
                android:text="16"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                style="@style/basicTextView"
                android:text="  ─  "
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/mainMinMaxMax"
                style="@style/basicTextView"
                android:text="23"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </TableRow>

        <TableLayout
            android:id="@+id/mainPmBoxTr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:gravity="center"
            android:background="@drawable/pm_motion_box_bg"
            app:layout_constraintTop_toBottomOf="@+id/mainMinMaxTr">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    style="@style/basicTextView"
                    android:fontFamily="@font/spoqa_hansansneo_bold"
                    android:text="@string/pm_10"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_marginEnd="20dp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/basicTextView"
                    android:fontFamily="@font/spoqa_hansansneo_bold"
                    android:text="@string/pm_2p5"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_marginStart="20dp"
                    android:textStyle="bold" />
            </TableRow>

         <TableRow
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:gravity="center">

             <com.aslib.AsTextView
                 android:id="@+id/mainPm10Grade"
                 style="@style/basicTextView"
                 android:text="매우나쁨"
                 android:fontFamily="@font/spoqa_hansansneo_regular"
                 android:textColor="@color/progressWorst"
                 android:textSize="15sp"
                 android:textStyle="bold"
                 android:layout_marginEnd="20dp"
                 app:sort="grade" />

             <com.aslib.AsTextView
                 android:id="@+id/mainPm2p5Grade"
                 style="@style/basicTextView"
                 android:text="매우나쁨"
                 android:fontFamily="@font/spoqa_hansansneo_regular"
                 android:textColor="@color/progressGood"
                 android:textSize="15sp"
                 android:textStyle="bold"
                 android:layout_marginStart="20dp"
                 app:sort="grade" />
         </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/mainMotionSlideGuide"
            style="@style/basicTextView"
            app:layout_constraintStart_toStartOf="@+id/mainMotionLinear"
            app:layout_constraintEnd_toEndOf="@+id/mainMotionLinear"
            app:layout_constraintBottom_toBottomOf="@+id/mainMotionLinear"
            android:text="날씨 정보 더보기"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="15dp"
            android:drawableBottom="@drawable/drop_down_bottom"/>
    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>
