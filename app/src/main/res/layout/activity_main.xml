            android:layout_marginStart="17dp"
            android:textSize="14sp"
            android:text="@string/live_temp"
            android:alpha="0"
            app:layout_constraintEnd_toStartOf="@+id/mainLiveTempValue"
            app:layout_constraintBottom_toBottomOf="@+id/mainLiveTempValue"/>

        <TextView
            android:id="@+id/mainLiveTempValueC"
            style="@style/basicMediumTextView"
            android:layout_marginStart="17dp"
            android:textSize="18sp"
