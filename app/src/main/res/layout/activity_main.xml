<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="dataVM"
            type="com.example.airsignal_app.vmodel.GetWeatherViewModel" />

    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/mainMotionLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:layoutDescription="@xml/main_motion_scene"
        app:layout_scrollFlags="scroll|exitUntilCollapsed">

        <LinearLayout
            android:id="@+id/mainMotionLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:nestedScrollingEnabled="false"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/nested_scrollview"
            app:layout_constraintTop_toBottomOf="@+id/topBarLinear" />

        <ScrollView
            android:id="@+id/mainTopBarGpsTitleScroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:overScrollMode="ifContentScrolls"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="@id/topBarLinear"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/topBarLinear">

            <TextView
                android:id="@+id/mainTopBarGpsTitle"
                style="@style/basicTextView"
                android:drawablePadding="3dp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:maxEms="12"
                android:singleLine="true"
                android:textColor="@color/mode_black_color"
                android:textSize="14sp"
                app:drawableStartCompat="@drawable/location_fill" />
        </ScrollView>

        <RelativeLayout
            android:id="@+id/topBarLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/mainSideMenuIv"
                style="@style/BasicImageButtonIcon"
                android:layout_centerVertical="true"
                android:layout_marginStart="24dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ico_hamb_w"
                app:tint="@color/mode_black_color" />

            <ImageView
                android:id="@+id/mainRefreshData"
                style="@style/BasicImageButtonIcon"
                android:layout_marginEnd="15dp"
                android:layout_toStartOf="@+id/mainAddAddress"
                android:layout_centerVertical="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/refresh"
                app:tint="@color/mode_black_color"/>

            <ImageView
                android:id="@+id/mainAddAddress"
                style="@style/BasicImageButtonIcon"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="24dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ico_add_w"
                app:tint="@color/mode_black_color" />

        </RelativeLayout>

        <!--        <com.google.android.material.bottomnavigation.BottomNavigationView-->
