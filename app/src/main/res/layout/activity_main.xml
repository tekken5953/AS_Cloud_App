            ads:layout_constraintStart_toStartOf="@+id/mainSkyText"
            ads:layout_constraintEnd_toEndOf="@+id/mainSkyText"
            ads:layout_constraintTop_toBottomOf="@+id/mainSkyText" />
        
        <TextView
