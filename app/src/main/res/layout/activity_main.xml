                            android:layout_height="110dp"
                            android:layout_marginStart="26dp"
                            android:translationZ="0dp"
                            app:cardCornerRadius="55dp"
                            app:cardElevation="0dp">

                        <TextView
                            android:id="@+id/nested_air_cpv_text"
                            style="@style/basicMediumTextView"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        </androidx.cardview.widget.CardView>

                        <ImageView
                            android:id="@+id/nested_air_help"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ico_question"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="top"/>

                    </TableRow>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/nested_air_rv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nested_air_tr"
                        android:layout_marginTop="35dp"
                        android:layout_marginBottom="12dp"
                        android:layout_centerHorizontal="true"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        ads:spanCount="3"
                        ads:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        tools:listitem="@layout/list_item_pm_title" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mainUVBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nested_air_box"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="12dp"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/uv_box_bg"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/mainUvTitle"
                        style="@style/basicMediumTextView"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="24dp"
                        android:drawablePadding="5dp"
                        android:text="@string/uv_title"
                        android:textColor="@color/theme_text_color"
                        android:textSize="18sp"
                        app:drawableStartCompat="@drawable/ico_uv" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/mainUVLegendRv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/mainUVLegendCardView"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="33dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginBottom="25dp"
                        android:layout_toEndOf="@+id/mainUVLegendCardView"
                        android:background="@drawable/uv_legend_ripple_bg"
                        android:clickable="true"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="5"
                        tools:listitem="@layout/list_item_uv_legend" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/mainUVLegendCardView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_below="@+id/mainUvTitle"
                        android:layout_alignStart="@+id/mainUvTitle"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="25dp"
                        android:translationZ="0dp"
                        app:cardBackgroundColor="#4ADE80"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:id="@+id/mainUvValue"
                            style="@style/basicMediumTextView"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:letterSpacing="-0.02"
                            android:lineSpacingExtra="2dp"
                            android:textColor="@color/white"
                            android:textSize="20sp" />
                    </androidx.cardview.widget.CardView>

                    <RelativeLayout
                        android:id="@+id/mainUvCollapsedLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/mainUVLegendRv"
                        android:visibility="visible">

                        <View
                            android:id="@+id/mainUvLine"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="13dp"
                            android:layout_marginEnd="18dp"
                            android:background="@color/theme_line_color" />

                        <TextView
                            android:id="@+id/mainUvCollapsedTitle"
                            style="@style/basicMediumTextView"
                            android:layout_below="@+id/mainUvLine"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="16dp"
                            android:text="@string/how_to_response_title"
                            android:textColor="@color/theme_text_color"
                            android:textSize="14sp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/mainUvCollapseRv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/mainUvCollapsedTitle"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="25dp"
                            android:clipToPadding="false"
                            android:nestedScrollingEnabled="false"
                            android:overScrollMode="never"
                            android:scrollbars="none"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/list_item_uv_collapsed" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mainSunBox"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@+id/mainUVBox"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/sun_box_bg">

                    <LinearLayout
                        android:id="@+id/mainSunSeekLinear"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_toEndOf="@+id/mainSUnRiseLinear"
                        android:layout_toStartOf="@+id/mainSunSetLinear"
                        android:layout_above="@+id/mainSunLine">

                        <com.triggertrap.seekarc.SeekArc
                            android:id="@+id/seekArc"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            app:arcColor="#E1E1E1"
                            app:arcWidth="9dp"
                            android:padding="10dp"
                            android:layout_marginTop="105dp"
                            app:max="100"
                            app:progressColor="#FF8A48"
                            app:progressWidth="9dp"
                            app:rotation="180"
                            app:roundEdges="true"
                            app:startAngle="90"
                            app:sweepAngle="180"
                            ads:thumb="@drawable/ico_sun_graph"
                            ads:thumbOffset="10dp"
                            app:touchInside="false" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mainSUnRiseLinear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal|bottom"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="40dp"
                        android:layout_above="@+id/mainSunLine">
                        <ImageView
                            android:id="@+id/mainSunRiseImg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:src="@drawable/ico_sun"/>

                        <TextView
                            android:id="@+id/mainSunRiseTitle"
                            style="@style/basicTextView"
                            android:layout_marginBottom="6dp"
                            android:ellipsize="end"
                            android:lines="1"
                            android:text="@string/sunrise"
                            android:textColor="@color/theme_text_color"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/mainSunRiseTime"
                            style="@style/basicMediumTextView"
                            android:layout_width="55dp"
                            android:layout_marginStart="3dp"
                            android:layout_marginBottom="12dp"
                            android:textColor="@color/theme_text_color"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mainSunSetLinear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal|bottom"
                        android:layout_above="@+id/mainSunLine"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="40dp">

                        <ImageView
                            android:id="@+id/mainSunSetImg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:src="@drawable/ico_moon" />

                        <TextView
                            android:id="@+id/mainSunSetTitle"
                            style="@style/basicTextView"
                            android:layout_marginBottom="6dp"
                            android:ellipsize="end"
                            android:lines="1"
                            android:text="@string/sunset"
                            android:textColor="@color/theme_text_color"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/mainSunSetTime"
                            style="@style/basicMediumTextView"
                            android:layout_width="55dp"
                            android:layout_marginStart="3dp"
                            android:layout_marginBottom="12dp"
                            android:textColor="@color/theme_text_color"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/mainSunLine"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_above="@+id/mainSunTr"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="12dp"
                        android:background="@color/theme_line_color" />

                    <TableRow
                        android:id="@+id/mainSunTr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="20dp"
                        android:gravity="center">

                        <TextView
                            style="@style/basicMediumTextView"
                            android:fontFamily="@font/spoqa_hansansneo_medium"
                            android:text="@string/tomorrow"
                            android:textColor="@color/theme_text_color"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/mainSunRiseTom"
                            style="@style/basicTextView"
                            android:layout_marginStart="16dp"
                            android:textColor="@color/theme_sun_tomorrow_day"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/mainSunSetTom"
                            style="@style/basicTextView"
                            android:layout_marginStart="16dp"
                            android:textColor="@color/theme_sun_tomorrow_night"
                            android:textSize="16sp" />
                    </TableRow>
                </RelativeLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

        <ImageButton
            android:id="@+id/nested_fab"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/fab_bg"
            android:src="@drawable/arrow_top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>