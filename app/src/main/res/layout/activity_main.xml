<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/currentSort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"
            android:text="현재 로그인 : "
            android:gravity="center"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/mainDialogBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dialog"
            app:layout_constraintTop_toBottomOf="@+id/currentSort"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/signOutGoogleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Out Google"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/signOutKakaoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Out Kakao"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signOutGoogleButton"/>

        <Button
            android:id="@+id/signOutNaverButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Out Naver"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signOutKakaoButton"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
