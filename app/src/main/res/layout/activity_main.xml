<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="dataVM"
            type="com.example.airsignal_app.vmodel.GetWeatherViewModel" />
    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/mainMotionLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:layoutDescription="@xml/main_motion_scene"
        app:layout_scrollFlags="scroll|exitUntilCollapsed">

        <LinearLayout
            android:id="@+id/mainMotionLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:nestedScrollingEnabled="false"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/nested_scrollview"
            app:layout_constraintTop_toBottomOf="@+id/topBarLinear" />

        <TextView
            android:id="@+id/mainTopBarGpsTitle"
            style="@style/basicTextView"
            android:drawablePadding="3dp"
            android:ellipsize="start"
            android:lines="1"
            android:maxEms="15"
            android:textColor="@color/mode_black_color"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/location_fill"
            app:layout_constraintBottom_toBottomOf="@id/topBarLinear"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/topBarLinear" />

        <RelativeLayout
            android:id="@+id/topBarLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/mainSideMenuIv"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="24dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/options_menu"
                app:tint="@color/mode_black_color" />

            <ImageView
                android:id="@+id/mainAddAddress"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="24dp"
                android:src="@drawable/add"
                app:tint="@color/mode_black_color" />

        </RelativeLayout>

        <!--        <com.google.android.material.bottomnavigation.BottomNavigationView-->
        <!--            android:id="@+id/bottomNav"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="55dp"-->
        <!--            android:alpha="0"-->
        <!--            app:itemIconTint="@color/main_blue_color"-->
        <!--            app:itemTextColor="@color/main_blue_color"-->
        <!--            app:layout_constraintBottom_toBottomOf="parent"-->
        <!--            app:menu="@menu/bottom_nav" />-->

        <TextView
            android:id="@+id/mainGpsTitleTv"
            style="@style/basicTextView"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/spoqa_hansansneo_regular"
            android:gravity="start"
            android:textColor="@color/mode_black_color"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/mainMotionLayout"
            app:layout_constraintTop_toBottomOf="@+id/topBarLinear" />

        <ImageView
            android:id="@+id/mainGpsFix"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="7dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/gps_fix"
            app:layout_constraintStart_toEndOf="@+id/mainGpsTitleTv"
            app:layout_constraintTop_toTopOf="@+id/mainGpsTitleTv"
            app:tint="@color/mode_black_color" />

        <ImageView
            android:id="@+id/mainSkyImg"
            android:layout_width="184dp"
            android:layout_height="184dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mainSkyText"
            style="@style/basicTextView"
            android:layout_marginTop="5dp"
            android:textColor="@color/mode_black_color"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/mainMotionLinear"
            app:layout_constraintStart_toStartOf="@+id/mainMotionLinear"
            app:layout_constraintTop_toBottomOf="@+id/mainSkyImg" />

        <TextView
            android:id="@+id/mainLiveTempMinus"
            style="@style/basicTextView"
            android:fontFamily="@font/spoqa_hansansneo_regular"
            android:text="-"
            android:textColor="@color/mode_black_color"
            android:textSize="55sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/mainLiveTempValue"
            app:layout_constraintEnd_toStartOf="@+id/mainLiveTempValue"
            app:layout_constraintTop_toTopOf="@+id/mainLiveTempValue" />

        <TextView
            android:id="@+id/mainLiveTempValue"
            style="@style/basicTextView"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/spoqa_hansansneo_regular"
            android:letterSpacing="0"
            android:textColor="@color/mode_black_color"
            android:textSize="60sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/mainLiveTempUnit"
            app:layout_constraintTop_toBottomOf="@+id/topBarLinear" />

        <TextView
            android:id="@+id/mainLiveTempUnit"
            style="@style/basicTextView"
            android:layout_marginStart="2dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="24dp"
            android:paddingTop="5dp"
            android:text="˚"
            android:textColor="@color/mode_black_color"
            android:textSize="57sp"
            app:layout_constraintEnd_toEndOf="@+id/mainMotionLayout"
            app:layout_constraintTop_toBottomOf="@+id/topBarLinear" />

        <TextView
            android:id="@+id/mainCompareTempTv"
            style="@style/basicTextView"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/mode_black_color"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/mainLiveTempUnit"
            app:layout_constraintTop_toBottomOf="@+id/mainLiveTempValue" />

        <TextView
            android:id="@+id/mainMinMaxTitle"
            style="@style/basicTextView"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:text="최저/최고"
            android:textColor="#70FFFFFF"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/mainMinMaxValue"
            app:layout_constraintEnd_toStartOf="@id/mainMinMaxValue"
            app:layout_constraintTop_toTopOf="@+id/mainMinMaxValue" />

        <TextView
            android:id="@+id/mainMinMaxValue"
            style="@style/basicTextView"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="5dp"
            android:textColor="#70FFFFFF"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/mainLiveTempUnit"
            app:layout_constraintTop_toBottomOf="@+id/mainCompareTempTv" />

        <TextView
            android:id="@+id/mainMotionSlideGuide"
            style="@style/basicTextView"
            android:layout_marginBottom="5dp"
            android:text="날씨 정보 더보기"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/mainMotionSLideImg"
            app:layout_constraintEnd_toEndOf="@+id/mainMotionLinear"
            app:layout_constraintStart_toStartOf="@+id/mainMotionLinear" />

        <ImageView
            android:id="@+id/mainMotionSLideImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:src="@drawable/drop_down_bottom"
            app:tint="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/mainMotionLinear"
            app:layout_constraintEnd_toEndOf="@id/mainMotionLayout"
            app:layout_constraintStart_toStartOf="@+id/mainMotionLayout" />


        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scrollview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="-30dp"
            android:background="@color/white"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mainMotionLinear">

            <RelativeLayout
                android:id="@+id/nested_main_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/view_line_color"
                android:paddingBottom="55dp">

                <RelativeLayout
                    android:id="@+id/nested_daily_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/scrolled_box_bg"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp">

                    <TextView
                        android:id="@+id/mainDailyWeatherTitle"
                        style="@style/basicTextView"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/spoqa_hansansneo_medium"
                        android:text="@string/daily_weather"
                        android:textColor="#4F4F4F"
                        android:textSize="18sp"
                        android:drawablePadding="5dp"
                        app:drawableStartCompat="@drawable/ico_time"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/mainDailyWeatherRv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/mainDailyWeatherTitle"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"
                        android:clipToPadding="false"
                        android:orientation="horizontal"
                        android:overScrollMode="never"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/list_item_daily_weather" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/nested_weekly_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nested_daily_box"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/scrolled_box_bg">

                    <TextView
                        android:id="@+id/mainWeeklyWeatherTitle"
                        style="@style/basicTextView"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/spoqa_hansansneo_medium"
                        android:text="@string/weekly_weather"
                        android:textColor="#4F4F4F"
                        android:textSize="18sp"
                        android:drawablePadding="5dp"
                        app:drawableStartCompat="@drawable/ico_week" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/mainWeeklyWeatherRv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/mainWeeklyWeatherTitle"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="18dp"
                        android:clipToPadding="false"
                        android:orientation="vertical"
                        android:overScrollMode="never"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/list_item_weekly_weather" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/nested_pm_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nested_weekly_box"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/scrolled_box_bg"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <TextView
                        android:id="@+id/nested_pm_title"
                        style="@style/basicTextView"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/spoqa_hansansneo_medium"
                        android:text="@string/live_air_quality"
                        android:textColor="#4F4F4F"
                        android:textSize="18sp"
                        android:drawablePadding="5dp"
                        app:drawableStartCompat="@drawable/ico_flow" />

                    <TextView
                        android:id="@+id/nested_pm_2p5_title"
                        style="@style/basicTextView"
                        android:layout_below="@+id/nested_pm_title"
                        android:layout_marginTop="25dp"
                        android:text="@string/pm2_5_title"
                        android:textColor="#7C7C7C"
                        android:textSize="14sp" />

                    <com.aslib.AsTextView
                        android:id="@+id/nested_pm_2p5_grade"
                        style="@style/basicTextView"
                        android:layout_below="@+id/nested_pm_2p5_title"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/spoqa_hansansneo_medium"
                        android:textSize="24sp"
                        app:sort="grade" />

                    <com.aslib.AsTextView
                        android:id="@+id/nested_pm_2p5_value"
                        style="@style/basicTextView"
                        android:layout_alignBottom="@+id/nested_pm_2p5_grade"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/nested_pm_2p5_unit"
                        android:fontFamily="@font/spoqa_hansansneo_medium"
                        android:textSize="24sp"
                        app:sort="pm2.5" />

                    <TextView
                        android:id="@+id/nested_pm_2p5_unit"
                        style="@style/basicTextView"
                        android:layout_alignBottom="@+id/nested_pm_2p5_grade"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="4dp"
                        android:text="㎍/㎥"
                        android:textColor="#7C7C7C"
                        android:textSize="12sp" />

                    <com.example.airsignal_app.view.SegmentedProgressBar
                        android:id="@+id/segment_progress_2p5_bar"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:layout_below="@+id/segment_progress_2p5_arrow"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="8dp" />

                    <TableRow
                        android:id="@+id/segment_progress_2p5_section"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/segment_progress_2p5_bar"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp">

                        <TextView
                            style="@style/basicTextView"
                            android:layout_weight="0.1"
                            android:gravity="start"
                            android:text="0"
                            android:textColor="#7C7C7C"
                            android:textSize="11sp" />

                        <TextView
                            style="@style/basicTextView"
                            android:layout_weight="0.21"
                            android:gravity="start"
                            android:text="15"
                            android:textColor="#7C7C7C"
                            android:textSize="11sp" />

                        <TextView
                            style="@style/basicTextView"
                            android:layout_weight="0.45"
                            android:gravity="start"
                            android:text="35"
                            android:textColor="#7C7C7C"
                            android:textSize="11sp" />

                        <TextView
                            style="@style/basicTextView"
                            android:layout_weight="0.14"
                            android:gravity="start"
                            android:text="75"
                            android:textColor="#7C7C7C"
                            android:textSize="11sp" />
                    </TableRow>

                    <ImageView
                        android:id="@+id/segment_progress_2p5_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nested_pm_2p5_value"
                        android:layout_alignStart="@+id/segment_progress_2p5_bar"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="6dp"
                        android:src="@drawable/ex_arr" />

                    <TextView
                        android:id="@+id/nested_pm_10_title"
                        style="@style/basicTextView"
                        android:layout_below="@+id/segment_progress_2p5_section"
                        android:layout_marginTop="25dp"
                        android:text="@string/pm10_title"
                        android:textColor="#7C7C7C"
                        android:textSize="14sp" />

                    <com.aslib.AsTextView
                        android:id="@+id/nested_pm_10_grade"
                        style="@style/basicTextView"
                        android:layout_below="@+id/nested_pm_10_title"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/spoqa_hansansneo_medium"
                        android:textSize="24sp"
                        app:sort="grade" />

                    <com.aslib.AsTextView
                        android:id="@+id/nested_pm_10_value"
                        style="@style/basicTextView"
                        android:layout_alignBottom="@+id/nested_pm_10_grade"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/nested_pm_2p5_unit"
                        android:fontFamily="@font/spoqa_hansansneo_medium"
                        android:textSize="24sp"
                        app:sort="pm10" />

                    <TextView
                        android:id="@+id/nested_pm_10_unit"
                        style="@style/basicTextView"
                        android:layout_alignBottom="@+id/nested_pm_10_grade"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="4dp"
                        android:text="㎍/㎥"
                        android:textColor="#7C7C7C"
                        android:textSize="12sp" />

                    <com.example.airsignal_app.view.SegmentedProgressBar
                        android:id="@+id/segment_progress_10_bar"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:layout_below="@+id/segment_progress_10_arrow"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="8dp" />

                    <TableRow
                        android:id="@+id/segment_progress_10_section"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/segment_progress_10_bar"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp">

                        <TextView
                            style="@style/basicTextView"
                            android:layout_weight="0.15"
                            android:gravity="start"
                            android:text="0"
                            android:textColor="#7C7C7C"
                            android:textSize="11sp" />

                        <TextView
                            style="@style/basicTextView"
                            android:layout_weight="0.25"
                            android:gravity="start"
                            android:text="30"
                            android:textColor="#7C7C7C"
                            android:textSize="11sp" />

                        <TextView
                            style="@style/basicTextView"
                            android:layout_weight="0.35"
                            android:gravity="start"
                            android:text="80"
                            android:textColor="#7C7C7C"
                            android:textSize="11sp" />

                        <TextView
                            style="@style/basicTextView"
                            android:layout_weight="0.25"
                            android:gravity="start"
                            android:text="150"
                            android:textColor="#7C7C7C"
                            android:textSize="11sp" />
                    </TableRow>

                    <ImageView
                        android:id="@+id/segment_progress_10_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nested_pm_10_value"
                        android:layout_alignStart="@+id/segment_progress_10_bar"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="6dp"
                        android:src="@drawable/ex_arr" />

                    <View
                        android:id="@+id/nested_pm_box_view1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/segment_progress_10_section"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="22dp"
                        android:background="#F3F3F3" />

                    <TableRow
                        android:id="@+id/mainAirTr1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nested_pm_box_view1"
                        android:layout_marginTop="20dp"
                        android:background="@color/white"
                        android:gravity="center">

                        <TextView
                            style="@style/basicTextView"
                            android:layout_weight="0.16"
                            android:gravity="start"
                            android:text="SO2"
                            android:textColor="#7C7C7C"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/mainAirSO2Value"
                            style="@style/basicTextView"
                            android:layout_width="70dp"
                            android:layout_weight="0.3"
                            android:fontFamily="@font/spoqa_hansansneo_medium"
                            android:gravity="end"
                            android:textSize="20sp"/>

                        <TextView
                            style="@style/basicTextView"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="0.05"
                            android:gravity="start"
                            android:text="ppm"
                            android:textColor="#7C7C7C"
                            android:textSize="11sp" />

                        <TextView
                            style="@style/basicTextView"
                            android:layout_marginStart="40dp"
                            android:layout_weight="0.16"
                            android:gravity="start"
                            android:text="NO2"
                            android:textColor="#7C7C7C"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/mainAirNO2Value"
                            style="@style/basicTextView"
                            android:layout_width="70dp"
                            android:layout_weight="0.3"
                            android:fontFamily="@font/spoqa_hansansneo_medium"
                            android:gravity="end"
                            android:textSize="20sp" />

                        <TextView
                            style="@style/basicTextView"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="0.05"
                            android:gravity="start"
                            android:text="mg/m3"
                            android:textColor="#7C7C7C"
                            android:textSize="11sp" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/mainAirTr2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mainAirTr1"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="25dp"
                        android:background="@color/white"
                        android:gravity="center">

                        <TextView
                            style="@style/basicTextView"
                            android:layout_weight="0.16"
                            android:gravity="start"
                            android:text="O3 "
                            android:textColor="#7C7C7C"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/mainAirO3Value"
                            style="@style/basicTextView"
                            android:layout_width="70dp"
                            android:layout_weight="0.3"
                            android:fontFamily="@font/spoqa_hansansneo_medium"
                            android:gravity="end"
                            android:textSize="20sp"/>

                        <TextView
                            style="@style/basicTextView"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="0.05"
                            android:gravity="start"
                            android:text="μg/m3"
                            android:textColor="#7C7C7C"
                            android:textSize="11sp" />

                        <TextView
                            style="@style/basicTextView"
                            android:layout_marginStart="40dp"
                            android:layout_weight="0.16"
                            android:gravity="start"
                            android:text="CO "
                            android:textColor="#7C7C7C"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/mainAirCOValue"
                            style="@style/basicTextView"
                            android:layout_width="70dp"
                            android:layout_weight="0.3"
                            android:fontFamily="@font/spoqa_hansansneo_medium"
                            android:gravity="end"
                            android:textSize="20sp"/>

                        <TextView
                            style="@style/basicTextView"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="0.05"
                            android:gravity="start"
                            android:text="ppm"
                            android:textColor="#7C7C7C"
                            android:textSize="11sp" />
                    </TableRow>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mainUVBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nested_pm_box"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="12dp"
                    android:animateLayoutChanges="true"
                    android:clickable="true"
                    android:background="@drawable/uv_box_bg">

                    <TextView
                        android:id="@+id/mainUvTitle"
                        style="@style/basicTextView"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="24dp"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/spoqa_hansansneo_medium"
                        android:text="@string/uv_title"
                        android:textSize="18sp"
                        app:drawableStartCompat="@drawable/ico_uv" />

                    <ImageView
                        android:id="@+id/mainUvCollapseArrow"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignTop="@+id/mainUvTitle"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp"
                        android:padding="5dp"
                        android:src="@drawable/btn_down"
                        app:tint="@color/black" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/mainUVLegendRv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:orientation="vertical"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="5"
                        android:clickable="true"
                        android:background="@drawable/uv_legend_ripple_bg"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/list_item_uv_legend"
                        android:layout_marginEnd="25dp"
                        android:layout_toEndOf="@+id/mainUVLegendCardView"
                        android:layout_alignTop="@+id/mainUVLegendCardView"
                        android:layout_marginStart="33dp"
                        android:layout_marginBottom="25dp"
                        android:layout_alignParentEnd="true"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/mainUVLegendCardView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardElevation="0dp"
                        android:translationZ="0dp"
                        app:cardCornerRadius="50dp"
                        android:paddingTop="5dp"
                        app:cardBackgroundColor="#4ADE80"
                        android:layout_below="@+id/mainUvTitle"
                        android:layout_marginTop="25dp"
                        android:layout_alignStart="@+id/mainUvTitle"
                        android:layout_marginStart="18dp">
                        <TextView
                            android:id="@+id/mainUvValue"
                            style="@style/basicTextView"
                            android:gravity="center"
                            android:fontFamily="@font/spoqa_hansansneo_medium"
                            android:layout_gravity="center"
                            android:letterSpacing="-0.02"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textColorHint="@color/white"/>
                    </androidx.cardview.widget.CardView>

                    <RelativeLayout
                        android:id="@+id/mainUvCollapsedLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/mainUVLegendRv"
                        android:visibility="gone">

                        <View
                            android:id="@+id/mainUvLine"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="13dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="18dp"
                            android:layout_marginEnd="18dp"
                            android:background="#F3F3F3" />

                        <TextView
                            android:id="@+id/mainUvCollapsedTitle"
                            style="@style/basicTextView"
                            android:layout_below="@+id/mainUvLine"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="16dp"
                            android:text="@string/how_to_response_title"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/mainUvCollapseRv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/mainUvCollapsedTitle"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="25dp"
                            android:clipToPadding="false"
                            android:nestedScrollingEnabled="false"
                            android:overScrollMode="never"
                            android:scrollbars="none"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/list_item_uv_collapsed" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mainSunBox"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@+id/mainUVBox"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/sun_box_bg">

                    <com.triggertrap.seekarc.SeekArc
                        android:id="@+id/seekArc"
                        android:layout_width="135dp"
                        android:layout_height="70dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="95dp"
                        android:padding="15dp"
                        android:scaleX="2.3"
                        android:scaleY="2.3"
                        app:arcColor="#60FFFFFF"
                        app:arcWidth="3dp"
                        app:max="100"
                        app:progress="50"
                        app:progressColor="@color/white"
                        app:progressWidth="3dp"
                        app:rotation="180"
                        app:roundEdges="true"
                        app:startAngle="90"
                        app:sweepAngle="180"
                        app:thumb="@drawable/ico_sun_graph"
                        app:touchInside="false"/>

                    <ImageView
                        android:id="@+id/mainSunRiseImg"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_above="@+id/mainSunRiseTitle"
                        android:layout_alignStart="@+id/mainSunRiseTitle"
                        android:layout_alignEnd="@+id/mainSunRiseTitle"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ico_sun"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/mainSunRiseTitle"
                        style="@style/basicTextView"
                        android:layout_above="@+id/mainSunSetTime"
                        android:layout_alignStart="@+id/mainSunRiseTime"
                        android:layout_alignEnd="@+id/mainSunRiseTime"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="@string/sunrise"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/mainSunRiseTime"
                        style="@style/basicTextView"
                        android:layout_above="@+id/mainSunLine"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="12dp"
                        android:layout_toStartOf="@+id/seekArc"
                        android:fontFamily="@font/spoqa_hansansneo_medium"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/mainSunSetImg"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_above="@+id/mainSunSetTitle"
                        android:layout_alignStart="@+id/mainSunSetTime"
                        android:layout_alignEnd="@+id/mainSunSetTime"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ico_moon"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/mainSunSetTitle"
                        style="@style/basicTextView"
                        android:layout_above="@+id/mainSunSetTime"
                        android:layout_alignStart="@+id/mainSunSetTime"
                        android:layout_alignEnd="@+id/mainSunSetTime"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="@string/sunset"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/mainSunSetTime"
                        style="@style/basicTextView"
                        android:layout_above="@+id/mainSunLine"
                        android:layout_marginStart="30dp"
                        android:layout_marginBottom="12dp"
                        android:layout_toEndOf="@+id/seekArc"
                        android:fontFamily="@font/spoqa_hansansneo_medium"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <View
                        android:id="@+id/mainSunLine"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_above="@+id/mainSunTr"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="12dp"
                        android:background="#20FFFFFF" />

                    <TableRow
                        android:id="@+id/mainSunTr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="20dp"
                        android:gravity="center">

                        <TextView
                            style="@style/basicTextView"
                            android:fontFamily="@font/spoqa_hansansneo_medium"
                            android:text="@string/tomorrow"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/mainSunRiseTom"
                            style="@style/basicTextView"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/spoqa_hansansneo_medium"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/mainSunSetTom"
                            style="@style/basicTextView"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/spoqa_hansansneo_medium"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </TableRow>
                </RelativeLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

        <ImageButton
            android:id="@+id/nested_fab"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/fab_bg"
            android:src="@drawable/arrow_top"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>