<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/mainDrawerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.navigation.NavigationView
                android:id="@+id/mainNavView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:fitsSystemWindows="true"
                app:headerLayout="@layout/nav_header"
                app:menu="@menu/nav_menu"
                app:itemTextColor="@color/dummy_gray_dark"/>

        </androidx.drawerlayout.widget.DrawerLayout>

            <ScrollView
                android:id="@+id/mainScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:context=".MainActivity">

                    <ImageView
                        android:id="@+id/mainSideMenuIv"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/options_menu"
                        app:tint="@color/dummy_gray_dark"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="25dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/mainGpsTitleTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="분당구 야탑동"
                        android:textSize="18sp"
                        android:drawablePadding="5dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/mainSideMenuIv"
                        app:layout_constraintBottom_toBottomOf="@+id/mainSideMenuIv"
                        app:drawableStartCompat="@drawable/gps" />

                    <TableRow
                        android:id="@+id/mainTable1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/mainSideMenuIv"
                        android:layout_marginTop="35dp"
                        android:gravity="center"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/mainSkyIv"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:src="@drawable/cloudy"
                            app:tint="@color/dummy_gray_dark"/>

                        <TextView
                            android:id="@+id/mainLiveTempTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25˚"
                            android:textColor="@color/dummy_gray_dark"
                            android:layout_marginStart="15dp"
                            android:textSize="62sp"/>
                    </TableRow>

                    <TextView
                        android:id="@+id/mainMinMaxTempTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="최저: 17˚\t\t\t\t최고: 30˚"
                        android:textSize="18sp"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@+id/mainTable1"/>

                    <TextView
                        android:id="@+id/mainTodayDateTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@+id/mainMinMaxTempTv"
                        android:text="2023년 03월 14일 화요일"
                        android:textSize="17sp"
                        android:textColor="@color/dummy_gray_medium"
                        android:layout_marginTop="18dp"/>

                    <View
                        android:id="@+id/mainView1"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/dummy_gray_line"
                        app:layout_constraintTop_toBottomOf="@+id/mainTodayDateTv"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginTop="20dp"/>

                    <TableRow
                        android:id="@+id/mainTable2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/mainView1"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5㎧\n풍속"
                            android:textSize="16sp"
                            android:gravity="center"
                            app:drawableTopCompat="@drawable/dummy"
                            android:drawablePadding="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10%\n습도"
                            android:textSize="16sp"
                            android:layout_marginStart="30dp"
                            android:gravity="center"
                            android:drawablePadding="5dp"
                            app:drawableTopCompat="@drawable/dummy" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20%\n강수확률"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_marginStart="30dp"
                            android:drawablePadding="5dp"
                            app:drawableTopCompat="@drawable/dummy" />
                    </TableRow>

                    <TextView
                        android:id="@+id/mainTodayWeatherTitleTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오늘의 날씨"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@+id/mainTable2"
                        android:layout_marginStart="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="30dp"/>

                    <TableRow
                        android:id="@+id/mainTable3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:padding="12dp"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@+id/mainTodayWeatherTitleTv">
                        <TextView
                            android:id="@+id/mainTodayWeatherPM10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="미세먼지\t\t매우나쁨"
                            android:background="@drawable/today_weather_box_bg"
                            android:textSize="16.5sp"/>

                        <TextView
                            android:id="@+id/mainTodayWeatherPM2.5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="초미세먼지\t\t매우나쁨"
                            android:layout_marginStart="12dp"
                            android:lines="1"
                            android:background="@drawable/today_weather_box_bg"
                            android:textSize="16.5sp"/>
                    </TableRow>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/mainTimeWeatherRv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/list_item_time_weather"
                        android:orientation="horizontal"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:layout_marginTop="15dp"
                        android:clipToPadding="false"
                        android:layout_marginBottom="30dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintTop_toBottomOf="@+id/mainTable3"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
