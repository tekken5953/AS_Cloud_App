<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data></data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dummy_gray_super_light">

        <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/mainDrawerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:openDrawer="start">

            <com.google.android.material.navigation.NavigationView
                android:id="@+id/mainNavView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:fitsSystemWindows="true"
                app:headerLayout="@layout/nav_header"
                app:itemTextAppearance="@style/TextAppearance.AppCompat.Medium"
                app:itemTextColor="@color/mode_color_text"
                app:menu="@menu/nav_menu" />

        </androidx.drawerlayout.widget.DrawerLayout>

        <RelativeLayout
            android:id="@+id/viewPagerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/mainSideMenuIv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/options_menu"
                app:tint="@color/mode_color_text" />

            <TextView
                android:id="@+id/mainGpsTitleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignTop="@+id/mainSideMenuIv"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:text="@string/main_gps_title"
                android:textColor="@color/mode_color_text"
                android:textSize="19sp"
                app:drawableStartCompat="@drawable/gps" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/mainTabLayout"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@android:color/transparent"
                android:layout_below="@+id/mainGpsTitleTv"
                android:layout_centerHorizontal="true"
                app:tabBackground="@drawable/tab_selector"
                app:tabGravity="center"
                app:tabIndicatorGravity="top"
                app:tabIndicatorHeight="0dp" />

            <ImageView
                android:id="@+id/mainSearchAddressIv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/search"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/mainSideMenuIv"
                android:layout_alignBottom="@+id/mainSideMenuIv"
                android:layout_marginEnd="24dp"
                app:tint="@color/mode_color_text"/>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/mainViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/mainTabLayout"
                android:clipToPadding="false" />
        </RelativeLayout>
    </RelativeLayout>
</layout>
