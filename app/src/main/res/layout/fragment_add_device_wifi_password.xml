<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/addWifiPwdTitle"
            style="@style/basicMediumTextView"
            android:layout_marginStart="20dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="20dp"
            android:gravity="start"
            android:textColor="@color/main_black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/addWifiPwdEt"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="17dp"
            android:textColorHint="@color/eye_graph_gray"
            android:background="@drawable/eye_et_enable_bg"
            android:drawableEnd="@drawable/invisible"
            app:tint="@color/main_black"
            android:fontFamily="@font/spoqa_hansansneo_medium"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:visibility="gone"
            android:cursorVisible="false"
            android:paddingEnd="15dp"
            android:textAllCaps="false"
            android:textColor="@color/main_black"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/addWifiPwdTitle" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addWifiPwdBtn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="52dp"
            android:background="@drawable/btn_blue_selector"
            android:enabled="false"
            android:visibility="gone"
            android:fontFamily="@font/spoqa_hansansneo_bold"
            android:text="전송"
            android:textColor="@color/eye_btn_disable_color"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent" />


        <LinearLayout
            android:id="@+id/addCompleteLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:layout_marginBottom="50dp">
            <ImageView
                android:id="@+id/addCompleteMark"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/group_checkbox_e"
                android:layout_marginBottom="24dp"/>
            <TextView
                style="@style/basicMediumTextView"
                android:text="AS-EYE 등록이\n완료되었습니다"
                android:textColor="@color/main_black"
                android:textSize="24sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
