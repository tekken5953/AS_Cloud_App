<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/changeLangBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/back"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/changeLangTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_lang"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@+id/changeLangBack"
        app:layout_constraintBottom_toBottomOf="@+id/changeLangBack"
        app:layout_constraintStart_toEndOf="@+id/changeLangBack"/>

    <RadioGroup
        android:id="@+id/changeLangRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/changeLangTitle">
        <RadioButton
            android:id="@+id/systemLangRb"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="@string/system_lang"
            android:textSize="16sp"
            android:background="?android:attr/selectableItemBackground"
            android:paddingTop="5dp"
            android:button="@null"
            android:paddingEnd="15dp"
            android:paddingStart="10dp"
            android:drawableEnd="@drawable/radio_button_selector"
            android:textColor="@drawable/radio_text_selector"
            android:gravity="center_vertical"/>

        <RadioButton
            android:id="@+id/koreanRB"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:paddingTop="5dp"
            android:button="@null"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:text="@string/korean"
            android:textSize="16sp"
            android:paddingEnd="15dp"
            android:paddingStart="10dp"
            android:drawableEnd="@drawable/radio_button_selector"
            android:textColor="@drawable/radio_text_selector"/>
        <RadioButton
            android:id="@+id/englishRB"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="@string/english"
            android:textSize="16sp"
            android:background="?android:attr/selectableItemBackground"
            android:paddingTop="5dp"
            android:button="@null"
            android:paddingEnd="15dp"
            android:paddingStart="10dp"
            android:drawableEnd="@drawable/radio_button_selector"
            android:textColor="@drawable/radio_text_selector"
            android:gravity="center_vertical"/>
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>