<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/addSerialTitle"
            style="@style/basicMediumTextView"
            android:layout_marginStart="20dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="20dp"
            android:gravity="start"
            android:textColor="@color/main_black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/addSerialEt"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="17dp"
            android:background="@drawable/eye_et_enable_bg"
            android:drawableEnd="@drawable/close_fill"
            android:fontFamily="@font/spoqa_hansansneo_medium"
            android:hint="AOA12345678901"
            android:inputType="text"
            android:visibility="invisible"
            android:paddingStart="15dp"
            android:cursorVisible="false"
            android:paddingEnd="15dp"
            android:textAllCaps="false"
            android:textColor="@color/main_black"
            android:textColorHint="@color/eye_btn_disable_color"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/addSerialTitle" />

        <LinearLayout
            android:id="@+id/addSerialResultContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/addSerialEt">
            <TextView
                android:id="@+id/addSerialResultTitle"
                style="@style/basicMediumTextView"
                android:layout_width="match_parent"
                android:textColor="@color/main_black"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginStart="17dp"
                android:layout_marginEnd="17dp"/>

            <TextView
                android:id="@+id/addSerialResultError"
                style="@style/basicMediumTextView"
                android:layout_width="match_parent"
                android:textColor="@color/red"
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:layout_marginStart="17dp"
                android:layout_marginEnd="17dp"/>

            <TextView
                android:id="@+id/addSerialResultCaution"
                style="@style/basicMediumTextView"
                android:layout_width="match_parent"
                android:textColor="@color/main_blue_color"
                android:layout_marginTop="15dp"
                android:textSize="14sp"
                android:layout_marginStart="17dp"
                android:layout_marginEnd="17dp"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addSerialBtn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="52dp"
            android:background="@drawable/btn_blue_selector"
            android:enabled="false"
            android:fontFamily="@font/spoqa_hansansneo_bold"
            android:text="다음"
            android:visibility="invisible"
            android:textColor="@color/eye_btn_disable_color"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
