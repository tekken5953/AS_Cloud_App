<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewPagerMainScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/viewPagerLiveTempFrame"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/viewPagerSkyImg"
                android:layout_width="111dp"
                android:layout_height="84dp"
                android:layout_gravity="top|center_horizontal"
                android:src="@drawable/sunny_cloudy" />

            <TextView
                android:id="@+id/viewPagerLiveTempValue"
                android:layout_width="match_parent"
                android:layout_height="113dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/spoqa_hansansneo_bold"
                android:text="23˚"
                android:textColor="@color/mode_color_text"
                android:textSize="80sp" />

            <TextView
                android:id="@+id/viewPagerSkyValue"
                style="@style/basicTextView"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/spoqa_hansansneo_regular"
                android:text="@string/little_cloudy"
                android:textSize="14sp" />
        </FrameLayout>

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/viewPagerLiveTempFrame"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/viewPagerLiveTempFrame"
            app:layout_constraintTop_toTopOf="@+id/viewPagerLiveTempFrame">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/basicTextView"
                    android:layout_gravity="end"
                    android:fontFamily="@font/spoqa_hansansneo_bold"
                    android:lines="1"
                    android:text="18˚"
                    android:textSize="32sp" />

                <TextView
                    style="@style/basicTextView"
                    android:fontFamily="@font/spoqa_hansansneo_bold"
                    android:gravity="center"
                    android:text="/"
                    android:textSize="24sp" />

                <TextView
                    style="@style/basicTextView"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:fontFamily="@font/spoqa_hansansneo_bold"
                    android:lines="1"
                    android:text="23˚"
                    android:textSize="32sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <TextView
                    style="@style/basicTextView"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/spoqa_hansansneo_regular"
                    android:gravity="start"
                    android:text="@string/sun_rise_time"
                    android:textColor="@color/main_gray_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/viewPagerSunRiseValue"
                    style="@style/basicTextView"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/spoqa_hansansneo_regular"
                    android:gravity="end"
                    android:text="06:45"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/spoqa_hansansneo_regular"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <TextView
                    style="@style/basicTextView"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/spoqa_hansansneo_regular"
                    android:gravity="start"
                    android:text="@string/sun_set_time"
                    android:textColor="@color/main_gray_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/viewPagerSunSetValue"
                    style="@style/basicTextView"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/spoqa_hansansneo_regular"
                    android:gravity="end"
                    android:text="18:32"
                    android:textSize="14sp" />
            </TableRow>

        </TableLayout>

        <TableRow
            android:id="@+id/viewPagerHumidBoxTr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/time_weather_box_bg"
            android:orientation="horizontal"
            android:weightSum="1"
            app:layout_constraintTop_toBottomOf="@+id/viewPagerLiveTempFrame">

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/viewPagerHumidImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/humid" />

                <TextView
                    android:id="@+id/viewPagerHumidValue"
                    style="@style/basicTextView"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/spoqa_hansansneo_medium"
                    android:text="45%"
                    android:textSize="16sp" />

                <TextView
                    style="@style/basicTextView"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="17dp"
                    android:fontFamily="@font/spoqa_hansansneo_regular"
                    android:text="@string/humid"
                    android:textColor="@color/main_gray_color"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/view_line_color"
                android:scaleY="0.75" />

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/viewPagerWindImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/wind" />

                <TextView
                    android:id="@+id/viewPagerWindValue"
                    style="@style/basicTextView"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/spoqa_hansansneo_medium"
                    android:text="4m/s, 동"
                    android:textSize="16sp" />

                <TextView
                    style="@style/basicTextView"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="17dp"
                    android:fontFamily="@font/spoqa_hansansneo_regular"
                    android:text="@string/wind"
                    android:textColor="@color/main_gray_color"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/view_line_color"
                android:scaleY="0.75" />

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/viewPagerRainPerImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/rain_per" />

                <TextView
                    android:id="@+id/viewPagerRainPerValue"
                    style="@style/basicTextView"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/spoqa_hansansneo_medium"
                    android:text="30%"
                    android:textSize="16sp" />

                <TextView
                    style="@style/basicTextView"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="17dp"
                    android:fontFamily="@font/spoqa_hansansneo_regular"
                    android:text="@string/rain_per"
                    android:textColor="@color/main_gray_color"
                    android:textSize="14sp" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:id="@+id/viewPagerPmBoxTr"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/pm_box_bg"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/viewPagerHumidBoxTr">

            <TextView
                style="@style/basicTextView"
                android:layout_weight="0.25"
                android:fontFamily="@font/spoqa_hansansneo_bold"
                android:text="@string/pm_10"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/viewPagerPm10Grade"
                style="@style/basicTextView"
                android:layout_marginStart="10dp"
                android:layout_weight="0.25"
                android:fontFamily="@font/spoqa_hansansneo_regular"
                android:text="@string/progress_verybad"
                android:textColor="@color/progressWorst"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/view_line_color"
                android:scaleY="0.75" />

            <TextView
                style="@style/basicTextView"
                android:layout_weight="0.25"
                android:fontFamily="@font/spoqa_hansansneo_bold"
                android:text="@string/pm_2p5"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/viewPagerPm2p5Grade"
                style="@style/basicTextView"
                android:layout_marginStart="10dp"
                android:layout_weight="0.25"
                android:fontFamily="@font/spoqa_hansansneo_regular"
                android:text="@string/progress_good"
                android:textColor="@color/progressGood"
                android:textSize="15sp"
                android:textStyle="bold" />

        </TableRow>

        <TextView
            android:id="@+id/viewPagerDailyWeatherTitle"
            style="@style/basicTextView"
            android:layout_marginStart="24dp"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/spoqa_hansansneo_bold"
            android:text="@string/daily_weather"
            android:textColor="@color/mode_color_text"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewPagerPmBoxTr" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/viewPagerDailyWeatherRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="30dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="@drawable/time_weather_recycler_bg"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/viewPagerDailyWeatherTitle"
            tools:listitem="@layout/list_item_daily_weather" />

        <TextView
            android:id="@+id/viewPagerWeeklyWeatherTitle"
            style="@style/basicTextView"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/spoqa_hansansneo_bold"
            android:text="@string/weekly_weather"
            android:textColor="@color/mode_color_text"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/viewPagerDailyWeatherTitle"
            app:layout_constraintTop_toBottomOf="@+id/viewPagerDailyWeatherRv" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/viewPagerWeeklyWeatherRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/time_weather_recycler_bg"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewPagerWeeklyWeatherTitle"
            tools:itemCount="7"
            tools:listitem="@layout/list_item_weekly_weather" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
