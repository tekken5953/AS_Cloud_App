<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TableRow
        android:id="@+id/inAppMsgTr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/inAppMsgVp"
        android:layout_marginBottom="5dp"
        android:gravity="end|center_vertical">
        <TextView
            android:id="@+id/inAppMsgNever"
            style="@style/basicMediumTextView"
            android:layout_marginEnd="12dp"
            android:text="@string/dont_ask_again"
            android:textColor="@color/sub_white"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/inAppMsgCancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/cancel"
            android:background="@drawable/in_app_cancel_bg"
            android:layout_marginEnd="3dp"
            app:tint="@color/white"
            android:padding="3dp"/>
    </TableRow>

    <TextView
        android:id="@+id/inAppMsgGuide"
        android:layout_width="320dp"
        android:layout_height="400dp"
        android:visibility="gone"
        android:gravity="center"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/inAppMsgVp"
        android:layout_width="320dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/inAppMsgTr"
        android:animateLayoutChanges="true"
        android:background="@drawable/in_app_vp_bg"
        android:backgroundTint="@color/white"/>

    <LinearLayout
        android:id="@+id/inAppMsgIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inAppMsgVp"
        android:gravity="center"
        android:layout_alignStart="@+id/inAppMsgVp"
        android:layout_alignEnd="@+id/inAppMsgVp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:clickable="false"/>

</RelativeLayout>