<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/navHeaderProfileCard"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_below="@+id/headerCancel"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/dummy_gray_dark"
        app:cardElevation="8dp"
        app:cardCornerRadius="50dp"
        android:translationZ="8dp">
        <ImageView
            android:id="@+id/navHeaderProfileImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/navHeaderUserId"
        style="@style/basicTextView"
        android:layout_alignTop="@+id/navHeaderProfileCard"
        android:layout_alignBottom="@+id/navHeaderProfileCard"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/navHeaderProfileCard"
        android:text="@string/please_login"
        android:textColor="@color/mode_color_text"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/headerCancel"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/cancel"
        app:tint="@color/mode_color_text" />

    <View
        android:id="@+id/navHeaderView1"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_below="@+id/navHeaderProfileCard"
        android:layout_marginStart="24dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="24dp"
        android:background="@color/dummy_gray_dark" />

</RelativeLayout>