<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widgetMainLayout"
    android:layout_width="290dp"
    android:layout_height="160dp"
    android:background="@drawable/widget_bg_290_160"
    android:padding="@dimen/widget_margin">

    <ImageView
        android:id="@+id/widgetLogoImg"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/airsignal_logo_color" />

    <TextView
        android:id="@+id/widgetTimeStamp"
        style="@style/basicTextView"
        android:layout_alignTop="@+id/widgetLogoImg"
        android:layout_alignBottom="@+id/widgetLogoImg"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/widgetLogoImg"
        android:textSize="12sp"
        tools:text="@tools:sample/date/hhmm" />

    <ImageView
        android:id="@+id/widgetRefresh"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:padding="5dp"
        android:src="@drawable/refresh"
        app:tint="@color/mode_color_text" />

</RelativeLayout>