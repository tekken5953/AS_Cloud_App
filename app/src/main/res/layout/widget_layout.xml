<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widgetMainLayout"
    android:layout_width="290dp"
    android:layout_height="95dp"
    android:layout_margin="5dp"
    android:background="@drawable/widget_bg_clear"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:id="@+id/widgetReloadLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_margin="5dp"
        android:background="@drawable/widget_reload_bg">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/widget_reload"
            android:fontFamily="@font/spoqa_hansansneo_medium"
            android:textColor="@color/black"/>
    </LinearLayout>

    <TextView
        android:id="@+id/widgetTempValue"
        style="@style/basicTextView"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/widgetTempIndex"
        style="@style/basicTextView"
        android:textSize="13sp"
        android:paddingStart="0dp"
        android:paddingEnd="7dp"
        android:textColor="@color/white"
        android:layout_below="@+id/widgetTempValue"
        android:layout_alignStart="@+id/widgetTempValue"
        android:layout_alignEnd="@+id/widgetTempValue"/>

    <ImageView
        android:id="@+id/widgetVerticalLine"
        android:layout_width="0.7dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/widgetTempValue"
        android:background="#80FFFFFF"/>

    <ImageView
        android:id="@+id/widgetAddressVector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vector"
        app:tint="@color/white"
        android:layout_toEndOf="@+id/widgetVerticalLine"
        android:layout_marginStart="8dp"
        android:layout_alignTop="@+id/widgetAddress"
        android:layout_alignBottom="@+id/widgetAddress"/>

    <TextView
        android:id="@+id/widgetAddress"
        style="@style/basicTextView"
        android:layout_toEndOf="@+id/widgetAddressVector"
        android:textSize="13sp"
        android:maxLines="1"
        android:maxEms="7"
        android:ellipsize="start"
        android:layout_marginTop="5dp"
        android:layout_marginStart="2dp"
        android:layout_alignTop="@+id/widgetTempValue"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/widgetSkyImg"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:id="@+id/widgetRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_toEndOf="@+id/widgetAddress"
        android:layout_alignTop="@+id/widgetAddress"
        android:layout_alignBottom="@+id/widgetAddress"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/widget_refresh" />

    <TextView
        android:id="@+id/widgetTime"
        style="@style/basicTextView"
        android:textSize="11sp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/white"
        android:layout_below="@+id/widgetAddress"
        android:layout_alignStart="@+id/widgetAddressVector"/>

    <TextView
        android:id="@+id/widgetPmIndex"
        style="@style/basicTextView"
        android:textSize="13sp"
        android:layout_alignStart="@+id/widgetAddressVector"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/widgetTime"
        android:textColor="@color/white"
        android:text="@string/widget_pm"/>

    <TextView
        android:id="@+id/widgetPmValue"
        style="@style/basicTextView"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_alignTop="@+id/widgetPmIndex"
        android:layout_alignBottom="@+id/widgetPmIndex"
        android:layout_toEndOf="@+id/widgetPmIndex"
        android:layout_marginStart="7dp"/>
</RelativeLayout>