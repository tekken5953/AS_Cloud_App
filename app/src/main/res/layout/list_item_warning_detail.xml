<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/warningIcon"
        style="@style/basicMediumTextView"
        android:text="â—‹"
        android:lineHeight="20dp"
        android:paddingTop="2dp"
        android:textColor="@color/theme_text_color"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/text12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_alignTop="@+id/warningIcon"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/warningIcon"
        android:gravity="top|start"
        android:textColor="@color/theme_text_color"
        android:lineHeight="20dp"/>
    <View
        android:id="@+id/warningLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/text12"
        android:background="@color/theme_line_color"/>
</RelativeLayout>
