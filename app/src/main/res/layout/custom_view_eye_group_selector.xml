<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/customGroupSelectIv"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintBottom_toTopOf="@+id/customGroupSelectTv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/customGroupSelectTv"
            style="@style/basicMediumTextView"
            android:autoSizeMaxTextSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customGroupSelectIv" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
