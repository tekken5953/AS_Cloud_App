<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".as_eye.nfc.NfcInfoFragment">

        <ImageView
            android:id="@+id/nfcInfoDeviceImg"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginBottom="80dp"
            android:src="@drawable/test_nfc"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nfcInfoTitle"
            style="@style/basicMediumTextView"
            android:layout_marginTop="20dp"
            android:text="NFC Tag Scan"
            android:textColor="@color/main_black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/nfcInfoDeviceImg"
            app:layout_constraintStart_toStartOf="@+id/nfcInfoDeviceImg"
            app:layout_constraintTop_toBottomOf="@+id/nfcInfoDeviceImg" />


        <TextView
            android:id="@+id/nfcInfoProgress"
            style="@style/basicTextView"
            android:layout_marginTop="30dp"
            android:text="Not yet Scanned"
            android:textColor="@color/main_black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nfcInfoTitle" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
