<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".as_eye.nfc.NfcInfoFragment">

        <ImageView
            android:id="@+id/nfcInfoDeviceImg"
            android:layout_width="320dp"
            android:layout_height="270dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="80dp"
            android:src="@drawable/test_nfc"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="56dp"/>

        <TextView
            android:id="@+id/nfcInfoTitle"
            style="@style/basicTextView"
            android:layout_width="0dp"
            android:layout_marginTop="45dp"
            android:text="@string/nfc_guide_main"
            android:textColor="@color/main_black"
            android:textSize="16sp"
            android:gravity="start"
            app:layout_constraintEnd_toEndOf="@+id/nfcInfoDeviceImg"
            app:layout_constraintStart_toStartOf="@+id/nfcInfoDeviceImg"
            app:layout_constraintTop_toBottomOf="@+id/nfcInfoDeviceImg" />


        <TextView
            android:id="@+id/nfcInfoSubTitle"
            android:layout_width="0dp"
            style="@style/basicTextView"
            android:layout_marginTop="10dp"
            android:text="@string/nfc_guide_sub"
            android:textColor="#9C9C9C"
            android:textSize="14sp"
            android:gravity="start"
            app:layout_constraintEnd_toEndOf="@+id/nfcInfoDeviceImg"
            app:layout_constraintStart_toStartOf="@+id/nfcInfoDeviceImg"
            app:layout_constraintTop_toBottomOf="@+id/nfcInfoTitle" />

        <TextView
            android:id="@+id/nfcInfoProgress"
            android:layout_width="0dp"
            style="@style/basicTextView"
            android:layout_marginTop="20dp"
            android:text="@string/nfc_wait_scan"
            android:textColor="@color/main_black"
            android:textSize="14sp"
            android:gravity="start"
            app:layout_constraintEnd_toEndOf="@+id/nfcInfoDeviceImg"
            app:layout_constraintStart_toStartOf="@+id/nfcInfoDeviceImg"
            app:layout_constraintTop_toBottomOf="@+id/nfcInfoSubTitle"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
