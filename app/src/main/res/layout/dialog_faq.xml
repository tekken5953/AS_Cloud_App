<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/mode_color_view">

    <ImageView
        android:id="@+id/faqBack"
        style="@style/BasicImageButtonIcon"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/back_arrow" />

    <TextView
        android:id="@+id/faqTitle"
        style="@style/basicTextView"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/spoqa_hansansneo_regular"
        android:text="@string/setting_faq"
        android:textColor="@color/mode_color_text"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/faqBack"
        android:layout_alignBottom="@+id/faqBack"/>

    <TextView
        android:id="@+id/faqNullText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/faqBack"
        android:gravity="center"
        android:text="자주 묻는 질문이 없습니다"
        android:textSize="20sp"
        android:visibility="gone"
        android:fontFamily="@font/spoqa_hansansneo_regular"
        android:textColor="@color/mode_color_text"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/faqRv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/faqBack"
        android:clipToPadding="false"
        tools:itemCount="1"
        android:overScrollMode="never"
        tools:listitem="@layout/list_item_faq"
        android:layout_marginTop="30dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

</RelativeLayout>