<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mode_color_view">

    <RelativeLayout
        android:id="@+id/appInfoTopBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/appInfoBack"
            style="@style/BasicImageButtonIcon"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/back_arrow" />


        <TextView
            style="@style/basicMediumTextView"
            android:layout_centerInParent="true"
            android:text="@string/setting_app_data"
            android:textColor="@color/mode_color_text"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/appInfoVersionTitle"
        style="@style/basicTextView"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/spoqa_hansansneo_medium"
        android:gravity="start"
        android:text="@string/app_version"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appInfoTopBar"
        android:layout_marginStart="24dp"/>

    <ProgressBar
        android:id="@+id/appInfoPB"
        android:layout_width="30dp"
        android:layout_height="30dp"
        style="@android:style/Widget.Material.Light.ProgressBar.Small"
        app:layout_constraintTop_toBottomOf="@+id/appInfoVersionTitle"
        app:layout_constraintStart_toStartOf="@+id/appInfoVersionTitle"
        app:layout_constraintEnd_toEndOf="@+id/appInfoVersionTitle"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/appInfoVersionValue"
        style="@style/basicTextView"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/spoqa_hansansneo_regular"
        android:textColor="@color/main_blue_color"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/appInfoVersionTitle"
        app:layout_constraintTop_toBottomOf="@+id/appInfoVersionTitle" />

    <TextView
        android:id="@+id/appInfoReleaseDate"
        style="@style/basicTextView"
        android:fontFamily="@font/spoqa_hansansneo_regular"
        android:textColor="@color/main_blue_color"
        android:textSize="12sp"
        android:visibility="gone"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toEndOf="@+id/appInfoVersionValue"
        app:layout_constraintTop_toTopOf="@+id/appInfoVersionValue"
        app:layout_constraintBottom_toBottomOf="@+id/appInfoVersionValue"/>

    <TextView
        android:id="@+id/appInfoIsRecent"
        style="@style/basicTextView"
        android:layout_marginTop="5dp"
        android:textColor="@color/option_title_color"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/appInfoVersionTitle"
        app:layout_constraintTop_toBottomOf="@+id/appInfoVersionValue" />

    <Button
        android:id="@+id/appInfoDownBtn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:backgroundTint="@color/main_blue_color"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/appInfoIsRecent"
        app:layout_constraintStart_toStartOf="@+id/appInfoIsRecent"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/appInfoLicense"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="오픈소스 라이선스"
        app:layout_constraintTop_toBottomOf="@+id/appInfoDownBtn"
        android:layout_marginTop="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:gravity="center_vertical|start"/>

</androidx.constraintlayout.widget.ConstraintLayout>