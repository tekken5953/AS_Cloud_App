<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mode_color_view">

    <ImageView
        android:id="@+id/appInfoBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:background="?selectableItemBackgroundBorderless"
        android:padding="4dp"
        android:src="@drawable/back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        style="@style/basicTextView"
        android:fontFamily="@font/spoqa_hansansneo_regular"
        android:text="@string/setting_app_data"
        android:textColor="@color/mode_color_text"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/appInfoBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/appInfoBack" />

    <TextView
        android:id="@+id/appInfoVersionTitle"
        style="@style/basicTextView"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/spoqa_hansansneo_medium"
        android:gravity="start"
        android:text="앱 버전"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/appInfoBack"
        app:layout_constraintTop_toBottomOf="@+id/appInfoBack" />

    <TextView
        android:id="@+id/appInfoVersionValue"
        style="@style/basicTextView"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/spoqa_hansansneo_regular"
        android:text="1.1.1 (최종 업데이트 2023.03.28)"
        android:textColor="@color/main_blue_color"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/appInfoVersionTitle"
        app:layout_constraintTop_toBottomOf="@+id/appInfoVersionTitle" />

    <TextView
        style="@style/basicTextView"
        android:layout_marginTop="5dp"
        android:text="최신 소프트웨어입니다."
        android:textColor="@color/option_title_color"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/appInfoVersionTitle"
        app:layout_constraintTop_toBottomOf="@+id/appInfoVersionValue" />

</androidx.constraintlayout.widget.ConstraintLayout>