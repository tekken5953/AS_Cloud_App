<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mode_color_view">

    <ImageView
        android:id="@+id/noticeBack"
        style="@style/BasicImageButtonIcon"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/back_arrow" />

    <TextView
        android:id="@+id/noticeTitle"
        style="@style/basicTextView"
        android:layout_alignTop="@+id/noticeBack"
        android:layout_alignBottom="@+id/noticeBack"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/spoqa_hansansneo_regular"
        android:text="@string/setting_notice"
        android:textColor="@color/mode_color_text"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/noticeNullText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/noticeBack"
        android:gravity="center"
        android:text="공지사항이 없습니다"
        android:textSize="20sp"
        android:visibility="gone"
        android:fontFamily="@font/spoqa_hansansneo_regular"
        android:textColor="@color/mode_color_text"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/noticeRv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/noticeBack"
        android:layout_marginTop="30dp"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/list_item_notice" />

</RelativeLayout>