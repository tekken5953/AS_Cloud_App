<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget4x2MainLayout"
    android:layout_width="280dp"
    android:layout_height="100dp"
    android:layout_margin="5dp"
    android:background="@drawable/widget_bg_clear"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:id="@+id/widget4x2ReloadLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@drawable/widget_reload_bg">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/widget_reload"
            android:fontFamily="@font/spoqa_hansansneo_medium"
            android:textColor="@color/black"/>
    </LinearLayout>

    <TextView
        android:id="@+id/widget4x2TempValue"
        style="@style/basicTextView"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:layout_marginStart="17dp"
        android:layout_alignTop="@+id/widget4x2VerticalLine"/>

    <TextView
        android:id="@+id/widget4x2TempIndex"
        style="@style/basicTextView"
        android:layout_below="@+id/widget4x2TempValue"
        android:layout_alignBottom="@+id/widget4x2VerticalLine"
        android:layout_alignStart="@+id/widget4x2TempValue"
        android:layout_alignEnd="@+id/widget4x2TempValue"
        android:paddingStart="0dp"
        android:paddingEnd="7dp"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/widget4x2VerticalLine"
        android:layout_width="0.7dp"
        android:layout_height="match_parent"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_toEndOf="@+id/widget4x2TempValue"
        android:background="#80FFFFFF"/>

    <ImageView
        android:id="@+id/widget4x2AddressVector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vector"
        app:tint="@color/white"
        android:layout_toEndOf="@+id/widget4x2VerticalLine"
        android:layout_marginStart="7dp"
        android:layout_alignTop="@+id/widget4x2VerticalLine"/>

    <TextView
        android:id="@+id/widget4x2Address"
        style="@style/basicTextView"
        android:layout_toEndOf="@+id/widget4x2AddressVector"
        android:autoSizeMaxTextSize="12sp"
        android:maxLines="1"
        android:maxEms="6"
        android:ellipsize="start"
        android:layout_marginStart="2dp"
        android:layout_alignTop="@+id/widget4x2AddressVector"
        android:layout_alignBottom="@+id/widget4x2AddressVector"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/widget4x2SkyImg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:id="@+id/widget4x2Refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/widget4x2Address"
        android:layout_alignTop="@+id/widget4x2AddressVector"
        android:layout_alignBottom="@+id/widget4x2AddressVector"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/widget_refresh" />

    <TextView
        android:id="@+id/widget4x2Time"
        style="@style/basicTextView"
        android:textSize="11sp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/white"
        android:layout_below="@+id/widget4x2Address"
        android:layout_alignStart="@+id/widget4x2AddressVector"/>

    <TextView
        android:id="@+id/widget4x2PmIndex"
        style="@style/basicTextView"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_alignStart="@id/widget4x2Time"
        android:layout_below="@+id/widget4x2Time"
        android:textColor="@color/white"
        android:text="@string/widget_pm"/>

    <TextView
        android:id="@+id/widget4x2PmValue"
        style="@style/basicTextView"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:layout_marginStart="5dp"
        android:layout_alignTop="@+id/widget4x2PmIndex"
        android:layout_alignBottom="@+id/widget4x2PmIndex"
        android:layout_toEndOf="@+id/widget4x2PmIndex"/>

    <TextView
        android:id="@+id/widget4x2RainPer"
        style="@style/basicTextView"
        android:textSize="12sp"
        android:layout_alignStart="@id/widget4x2Time"
        android:layout_below="@+id/widget4x2PmIndex"
        android:layout_marginTop="3dp"
        android:textColor="@color/white"
        android:text="@string/widget_rainPer"/>

    <TextView
        android:id="@+id/widget4x2RainPerValue"
        style="@style/basicTextView"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:layout_alignTop="@+id/widget4x2RainPer"
        android:layout_alignBottom="@+id/widget4x2RainPer"
        android:layout_toEndOf="@+id/widget4x2RainPer"
        android:layout_marginStart="5dp"/>
</RelativeLayout>