<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="30dp"
    android:background="@drawable/daily_box_bg">

    <TextView
        android:id="@+id/itemDailyDate"
        style="@style/basicTextView"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@drawable/daily_date_bg_ns"
        android:fontFamily="@font/spoqa_hansansneo_regular"
        android:textSize="12sp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/itemDailyTime"
        style="@style/basicTextView"
        android:layout_below="@+id/itemDailyDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/spoqa_hansansneo_bold"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/itemDailySky"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/itemDailyTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/itemDailyValue"
        style="@style/basicTextView"
        android:layout_below="@+id/itemDailySky"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/spoqa_hansansneo_regular"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/itemDailyRain"
        style="@style/basicTextView"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="invisible"
        android:background="@drawable/daily_list_rain"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/itemDailyValue"
        android:layout_marginBottom="25dp"/>
</RelativeLayout>