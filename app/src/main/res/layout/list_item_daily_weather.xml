<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="2dp"
    android:background="@drawable/time_weather_box_bg">

    <TextView
        android:id="@+id/itemTimeWeatherTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26.5dp"
        android:text="@string/hour_12"
        android:fontFamily="@font/spoqa_hansansneo_bold"
        android:textColor="@color/mode_color_text"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/itemTimeWeatherSky"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/itemTimeWeatherTime"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:src="@drawable/sunny" />

    <TextView
        android:id="@+id/itemTimeWeatherValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18Ëš"
        android:fontFamily="@font/spoqa_hansansneo_regular"
        android:layout_marginBottom="26.5dp"
        android:textColor="@color/mode_color_text"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:layout_below="@+id/itemTimeWeatherSky"/>

</RelativeLayout>