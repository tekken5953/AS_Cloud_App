<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <EditText
        android:id="@+id/inputEt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:gravity="center"
        android:hint="010-0000-0000"
        android:inputType="phone"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_toStartOf="@+id/inputSendBtn"
        android:layout_centerVertical="true" />

    <Button
        android:id="@+id/inputSendBtn"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="24dp"
        android:inputType="phone"
        android:text="Send"
        android:textAllCaps="false"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:id="@+id/inputNumberEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:inputType="number"
        android:visibility="gone"
        android:layout_below="@+id/inputEt"
        android:layout_alignStart="@+id/inputEt"
        android:layout_alignEnd="@+id/inputEt"/>

    <TextView
        android:id="@+id/inputResultText"
        style="@style/basicTextView"
        android:layout_marginTop="3dp"
        android:text="비밀번호가 올바르지 않습니다"
        android:textColor="@color/red"
        android:textSize="12sp"
        android:visibility="gone"
        android:layout_below="@+id/inputNumberEt"
        android:layout_alignStart="@+id/inputNumberEt"
        android:layout_alignEnd="@+id/inputNumberEt"/>

</RelativeLayout>