<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/phoneInputEt"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:hint="010-0000-0000"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:inputType="phone"
        app:layout_constraintEnd_toStartOf="@+id/phoneInputSendBtn"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/phoneInputSendBtn"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Send"
        android:textAllCaps="false"
        app:layout_constraintTop_toTopOf="@+id/phoneInputEt"
        app:layout_constraintBottom_toBottomOf="@+id/phoneInputVerifyEt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/phoneInputEt"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="15dp"/>

    <EditText
        android:id="@+id/phoneInputVerifyEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/phoneInputEt"
        app:layout_constraintStart_toStartOf="@+id/phoneInputEt"
        app:layout_constraintEnd_toEndOf="@+id/phoneInputEt"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:inputType="number"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/phoneInputResultText"
        style="@style/basicTextView"
        app:layout_constraintStart_toStartOf="@+id/phoneInputVerifyEt"
        app:layout_constraintEnd_toEndOf="@+id/phoneInputVerifyEt"
        app:layout_constraintTop_toBottomOf="@+id/phoneInputVerifyEt"
        android:layout_marginTop="3dp"
        android:text="비밀번호가 올바르지 않습니다"
        android:textSize="12sp"
        android:textColor="@color/red"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>