<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/weeklyDayText"
            style="@style/basicTextView"
            android:text="@string/monday"
            android:lines="1"
            android:layout_weight="0.25"
            android:layout_marginStart="24dp"
            android:textSize="14sp"
            android:gravity="center"
            android:fontFamily="@font/spoqa_hansansneo_medium"
            android:textColor="@color/mode_color_text"/>

        <ImageView
            android:id="@+id/weeklyMinIv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:layout_weight="0.2"
            android:src="@drawable/cloud_test" />

        <ImageView
            android:id="@+id/weeklyMaxIv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/sunny_test"
            android:layout_weight="0.2"
            android:layout_marginEnd="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/weeklyMinText"
            style="@style/basicTextView"
            android:text="20˚"
            android:layout_weight="0.07"
            android:gravity="start"
            android:lines="1"
            android:textSize="14sp"
            android:fontFamily="@font/spoqa_hansansneo_regular"/>

        <TextView
            android:id="@+id/weeklySlash"
            style="@style/basicTextView"
            android:text="/"
            android:gravity="center"
            android:layout_weight="0.07"
            android:lines="1"
            android:textSize="14sp"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/spoqa_hansansneo_regular"/>

        <TextView
            android:id="@+id/weeklyMaxText"
            style="@style/basicTextView"
            android:text="23˚"
            android:gravity="end"
            android:lines="1"
            android:layout_weight="0.07"
            android:textSize="14sp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/spoqa_hansansneo_regular"/>
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line_color"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="3dp"/>

</LinearLayout>