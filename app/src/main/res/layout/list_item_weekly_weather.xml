<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical"
    android:background="@color/white">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/weeklyDayText"
            style="@style/basicTextView"
            android:lines="1"
            android:layout_weight="0.25"
            android:layout_marginStart="15dp"
            android:textSize="14sp"
            android:gravity="center"
            android:fontFamily="@font/spoqa_hansansneo_medium"
            android:textColor="#2D3436"/>

        <ImageView
            android:id="@+id/weeklyMinIv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="35dp"
            android:layout_weight="0.2"/>

        <ImageView
            android:id="@+id/weeklyMaxIv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="0.2"
            android:layout_marginEnd="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/weeklyMinText"
            style="@style/basicTextView"
            android:layout_weight="0.08"
            android:gravity="center"
            android:lines="1"
            android:textSize="14sp"
            android:textColor="#68C9FF"/>

        <TextView
            android:id="@+id/weeklySlash"
            style="@style/basicTextView"
            android:text="/"
            android:gravity="center"
            android:layout_weight="0.05"
            android:lines="1"
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_marginStart="2dp"/>

        <TextView
            android:id="@+id/weeklyMaxText"
            style="@style/basicTextView"
            android:gravity="center"
            android:lines="1"
            android:textColor="#FF6868"
            android:layout_weight="0.08"
            android:textSize="14sp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="2dp"/>
    </TableRow>

    <View
        android:id="@+id/weeklyBottomLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line_color"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="3dp"/>
</LinearLayout>