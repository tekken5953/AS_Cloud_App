<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mode_color_view">

        <RelativeLayout
            android:id="@+id/settingTopBarTr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/settingBack"
                style="@style/BasicImageButtonIcon"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:layout_marginStart="20dp"
                android:src="@drawable/back_arrow"
                app:tint="@color/mode_color_text"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/settingTitle"
                style="@style/basicTextView"
                android:fontFamily="@font/spoqa_hansansneo_regular"
                android:text="@string/setting_title"
                android:textSize="16sp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:overScrollMode="never"
            android:layout_marginTop="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settingTopBarTr">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/settingUserTitle"
                    style="@style/basicTextView"
                    android:layout_marginStart="24dp"
                    android:text="@string/setting_account"
                    android:textColor="@color/option_title_color"
                    android:textSize="14sp"
                    android:fontFamily="@font/spoqa_hansansneo_bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <View
                    android:id="@+id/settingLine1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="24dp"
                    android:background="@color/view_line_color"
                    app:layout_constraintTop_toBottomOf="@+id/settingUserTitle" />

                <RelativeLayout
                    android:id="@+id/settingUserTr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="26dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/settingLine1">

                    <ImageView
                        android:id="@+id/settingUserIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/settingUserEmail"
                        style="@style/basicTextView"
                        android:layout_centerVertical="true"
                        android:text="@string/please_login"
                        android:textSize="16sp"
                        android:layout_toEndOf="@+id/settingUserIcon"
                        android:layout_marginStart="6dp"
                        android:fontFamily="@font/spoqa_hansansneo_regular" />

                    <TextView
                        android:id="@+id/settingLogOut"
                        style="@style/basicTextView"
                        android:padding="5dp"
                        android:textColor="@color/red"
                        android:text="@string/setting_logout"
                        android:fontFamily="@font/spoqa_hansansneo_regular"
                        android:textSize="16sp"
                        android:layout_gravity="end"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/settingThemeTitle"
                    style="@style/basicTextView"
                    android:layout_marginTop="40dp"
                    android:text="@string/system"
                    android:textColor="@color/option_title_color"
                    android:textSize="14sp"
                    android:fontFamily="@font/spoqa_hansansneo_bold"
                    app:layout_constraintStart_toStartOf="@+id/settingUserTitle"
                    app:layout_constraintTop_toBottomOf="@+id/settingUserTr" />

                <View
                    android:id="@+id/settingLine2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="24dp"
                    android:background="@color/view_line_color"
                    app:layout_constraintTop_toBottomOf="@+id/settingThemeTitle" />

                <com.example.airsignal_app.view.custom_view.SettingSystemView
                    android:id="@+id/settingSystemTheme"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:left="@string/setting_theme_left"
                    app:layout="@layout/custom_view_setting_system"
                    app:layout_constraintTop_toBottomOf="@+id/settingLine2"/>

                <com.example.airsignal_app.view.custom_view.SettingSystemView
                    android:id="@+id/settingSystemLang"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:left="@string/setting_lang"
                    app:layout="@layout/custom_view_setting_system"
                    app:layout_constraintTop_toBottomOf="@+id/settingSystemTheme"/>

                <com.example.airsignal_app.view.custom_view.SettingSystemView
                    android:id="@+id/settingSystemFont"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:left="@string/font_scale"
                    app:layout="@layout/custom_view_setting_system"
                    app:layout_constraintTop_toBottomOf="@+id/settingSystemLang"/>

                <TextView
                    android:id="@+id/settingNotiTitle"
                    style="@style/basicTextView"
                    android:layout_marginTop="25dp"
                    android:text="@string/setting_notify"
                    android:textColor="@color/option_title_color"
                    android:textSize="14sp"
                    android:fontFamily="@font/spoqa_hansansneo_bold"
                    app:layout_constraintStart_toStartOf="@+id/settingUserTitle"
                    app:layout_constraintTop_toBottomOf="@+id/settingSystemFont" />

                <View
                    android:id="@+id/settingLine3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="24dp"
                    android:background="@color/view_line_color"
                    app:layout_constraintTop_toBottomOf="@+id/settingNotiTitle" />

                <com.example.airsignal_app.view.custom_view.NotiSwitchView
                    android:id="@+id/notiPM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:enableSubTitle="false"
                    app:topicTitle="notification_pm"
                    app:notiTitle="@string/setting_notify_pm"
                    app:basicTitle="@string/pm"
                    app:layout="@layout/custom_view_setting_noti"
                    app:layout_constraintTop_toBottomOf="@+id/settingLine3"/>

                <com.example.airsignal_app.view.custom_view.NotiSwitchView
                    android:id="@+id/notiEvent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:notiTitle="@string/setting_notify_event"
                    app:enableSubTitle="false"
                    app:basicTitle="@string/event"
                    app:topicTitle="notification_event"
                    app:layout="@layout/custom_view_setting_noti"
                    app:layout_constraintTop_toBottomOf="@+id/notiPM"/>

                <com.example.airsignal_app.view.custom_view.NotiSwitchView
                    android:id="@+id/notiNight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:enableSubTitle="true"
                    app:basicTitle="@string/night"
                    app:topicTitle="notification_night"
                    app:notiTitle="@string/setting_notify_night"
                    app:layout="@layout/custom_view_setting_noti"
                    app:layout_constraintTop_toBottomOf="@+id/notiEvent"/>

                <TextView
                    android:id="@+id/settingCustomerTitle"
                    style="@style/basicTextView"
                    android:layout_marginTop="25dp"
                    android:text="@string/setting_customer_service"
                    android:textColor="@color/option_title_color"
                    android:textSize="14sp"
                    android:fontFamily="@font/spoqa_hansansneo_bold"
                    app:layout_constraintStart_toStartOf="@+id/settingUserTitle"
                    app:layout_constraintTop_toBottomOf="@+id/notiNight" />

                <View
                    android:id="@+id/settingLine4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="24dp"
                    android:background="@color/view_line_color"
                    app:layout_constraintTop_toBottomOf="@+id/settingCustomerTitle" />

                <TextView
                    android:id="@+id/settingNotice"
                    android:layout_width="match_parent"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:background="?android:attr/selectableItemBackground"
                    style="@style/settingSingleTextView"
                    android:text="@string/setting_notice"
                    app:layout_constraintTop_toBottomOf="@+id/settingLine4" />

                <TextView
                    android:id="@+id/settingEvent"
                    android:layout_width="match_parent"
                    style="@style/settingSingleTextView"
                    android:paddingStart="24dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingEnd="24dp"
                    android:text="@string/event"
                    app:layout_constraintTop_toBottomOf="@+id/settingNotice" />

                <TextView
                    android:id="@+id/settingFaq"
                    android:layout_width="match_parent"
                    style="@style/settingSingleTextView"
                    android:layout_marginBottom="30dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="@string/setting_faq"
                    app:layout_constraintTop_toBottomOf="@+id/settingEvent" />

                <TextView
                    android:id="@+id/settingAppInfo"
                    android:layout_width="match_parent"
                    style="@style/settingSingleTextView"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:text="@string/setting_app_data"
                    android:background="?android:attr/selectableItemBackground"
                    app:layout_constraintTop_toBottomOf="@+id/settingFaq" />

                <at.grabner.circleprogress.CircleProgressView
                    android:id="@+id/cpv11"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="150dp"
                    app:layout_constraintTop_toBottomOf="@+id/settingAppInfo"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="15dp"
                    app:layout_constraintBottom_toTopOf="@+id/cpv1"
                    app:cpv_barColor="@color/air_good"
                    app:cpv_barWidth="20dp"
                    app:cpv_rimColor="#E1E1E1"
                    app:cpv_rimWidth="20dp"
                    app:cpv_text="123"
                    app:cpv_textSize="21sp"
                    app:cpv_textMode="Value"
                    app:cpv_textColor="@color/air_good"
                    app:cpv_unit="ppm"
                    app:cpv_innerContourColor="@android:color/transparent"
                    app:cpv_outerContourColor="@android:color/transparent"
                    app:cpv_unitColor="#7C7C7C"
                    app:cpv_unitSize="10sp"
                    app:cpv_startAngle="190"
                    app:cpv_unitPosition="bottom"
                    app:cpv_showUnit="true"
                    app:cpv_seekMode="false"
                    android:layout_marginBottom="15dp"/>

                <at.grabner.circleprogress.CircleProgressView
                    android:id="@+id/cpv22"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toTopOf="@+id/cpv11"
                    app:layout_constraintStart_toEndOf="@+id/cpv11"
                    app:layout_constraintEnd_toStartOf="@+id/cpv33"
                    app:layout_constraintBottom_toBottomOf="@id/cpv11"
                    app:cpv_barColor="@color/air_normal"
                    app:cpv_barWidth="20dp"
                    app:cpv_rimColor="#E1E1E1"
                    app:cpv_rimWidth="20dp"
                    app:cpv_text="123"
                    app:cpv_textSize="21sp"
                    app:cpv_textMode="Value"
                    app:cpv_textColor="@color/air_normal"
                    app:cpv_unit="㎍/m3"
                    app:cpv_innerContourColor="@android:color/transparent"
                    app:cpv_outerContourColor="@android:color/transparent"
                    app:cpv_unitColor="#7C7C7C"
                    app:cpv_unitSize="10sp"
                    app:cpv_startAngle="140"
                    app:cpv_unitPosition="bottom"
                    app:cpv_showUnit="true"
                    app:cpv_seekMode="false"
                    android:layout_marginBottom="15dp"/>

                <at.grabner.circleprogress.CircleProgressView
                    android:id="@+id/cpv33"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toTopOf="@+id/cpv11"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/cpv11"
                    android:layout_marginEnd="15dp"
                    app:cpv_barColor="@color/air_bad"
                    app:cpv_barWidth="20dp"
                    app:cpv_rimColor="#E1E1E1"
                    app:cpv_rimWidth="20dp"
                    app:cpv_text="123"
                    app:cpv_textSize="19sp"
                    app:cpv_textMode="Value"
                    app:cpv_textColor="@color/air_bad"
                    app:cpv_unit="㎍/m3"
                    app:cpv_innerContourColor="@android:color/transparent"
                    app:cpv_outerContourColor="@android:color/transparent"
                    app:cpv_unitColor="#7C7C7C"
                    app:cpv_unitSize="10sp"
                    app:cpv_startAngle="140"
                    app:cpv_unitPosition="bottom"
                    app:cpv_showUnit="true"
                    app:cpv_seekMode="false"
                    android:layout_marginBottom="15dp"/>


                <at.grabner.circleprogress.CircleProgressView
                    android:id="@+id/cpv1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toTopOf="@+id/cpv2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/cpv2"
                    app:layout_constraintBottom_toBottomOf="@id/cpv2"
                    app:cpv_barColor="@color/air_good"
                    app:cpv_barWidth="20dp"
                    app:cpv_rimColor="#E1E1E1"
                    app:cpv_rimWidth="20dp"
                    app:cpv_maxValue="100"
                    app:cpv_text="123"
                    app:cpv_textSize="19sp"
                    app:cpv_textMode="Text"
                    app:cpv_textColor="@color/air_good"
                    app:cpv_unit="ppm"
                    app:cpv_innerContourColor="@android:color/transparent"
                    app:cpv_outerContourColor="@android:color/transparent"
                    app:cpv_unitColor="#7C7C7C"
                    app:cpv_unitSize="10sp"
                    app:cpv_startAngle="190"
                    app:cpv_unitPosition="bottom"
                    app:cpv_showUnit="true"
                    app:cpv_seekMode="false"/>

                <at.grabner.circleprogress.CircleProgressView
                    android:id="@+id/cpv2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toBottomOf="@+id/cpv11"
                    app:layout_constraintStart_toEndOf="@+id/cpv1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="50dp"
                    app:cpv_barColor="@color/air_normal"
                    app:cpv_barWidth="20dp"
                    app:cpv_rimColor="#E1E1E1"
                    app:cpv_rimWidth="20dp"
                    app:cpv_maxValue="100"
                    app:cpv_text="123"
                    app:cpv_textSize="19sp"
                    app:cpv_textMode="Text"
                    app:cpv_textColor="@color/air_normal"
                    app:cpv_unit="㎍/m3"
                    app:cpv_innerContourColor="@android:color/transparent"
                    app:cpv_outerContourColor="@android:color/transparent"
                    app:cpv_unitColor="#7C7C7C"
                    app:cpv_unitSize="10sp"
                    app:cpv_startAngle="140"
                    app:cpv_unitPosition="bottom"
                    app:cpv_showUnit="true"
                    app:cpv_seekMode="false"
                    android:layout_marginBottom="15dp"/>

                <at.grabner.circleprogress.CircleProgressView
                    android:id="@+id/cpv3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/cpv1"
                    app:layout_constraintStart_toStartOf="@+id/cpv1"
                    app:layout_constraintEnd_toEndOf="@+id/cpv1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:cpv_barColor="@color/air_bad"
                    app:cpv_barWidth="20dp"
                    app:cpv_rimColor="#E1E1E1"
                    app:cpv_rimWidth="20dp"
                    app:cpv_maxValue="100"
                    app:cpv_text="123"
                    app:cpv_textSize="19sp"
                    app:cpv_textMode="Text"
                    app:cpv_textColor="@color/air_bad"
                    app:cpv_unit="㎍/m3"
                    app:cpv_innerContourColor="@android:color/transparent"
                    app:cpv_outerContourColor="@android:color/transparent"
                    app:cpv_unitColor="#7C7C7C"
                    app:cpv_unitSize="10sp"
                    app:cpv_startAngle="100"
                    app:cpv_unitPosition="bottom"
                    app:cpv_showUnit="true"
                    app:cpv_seekMode="false"
                    android:layout_marginBottom="15dp"/>

                <at.grabner.circleprogress.CircleProgressView
                    android:id="@+id/cpv4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toTopOf="@+id/cpv3"
                    app:layout_constraintBottom_toBottomOf="@+id/cpv3"
                    app:layout_constraintStart_toStartOf="@id/cpv2"
                    app:layout_constraintEnd_toEndOf="@+id/cpv2"
                    app:cpv_barColor="@color/air_very_bad"
                    app:cpv_barWidth="20dp"
                    app:cpv_rimColor="#E1E1E1"
                    app:cpv_rimWidth="20dp"
                    app:cpv_maxValue="100"
                    app:cpv_text="123"
                    app:cpv_textSize="19sp"
                    app:cpv_textMode="Text"
                    app:cpv_textColor="@color/air_very_bad"
                    app:cpv_unit="ppm"
                    app:cpv_innerContourColor="@android:color/transparent"
                    app:cpv_outerContourColor="@android:color/transparent"
                    app:cpv_unitColor="#7C7C7C"
                    app:cpv_unitSize="10sp"
                    app:cpv_startAngle="100"
                    app:cpv_unitPosition="bottom"
                    app:cpv_showUnit="true"
                    app:cpv_seekMode="false"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
