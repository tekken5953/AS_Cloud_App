<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:background="@drawable/time_weather_box_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/itemTimeWeatherTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12시"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/itemTimeWeatherSky"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/cloudy"
        app:tint="@color/dummy_gray_dark"
        android:layout_below="@+id/itemTimeWeatherTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/itemTimeWeatherValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18˚"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_below="@+id/itemTimeWeatherSky"/>

</RelativeLayout>