<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout 
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/addCompleteTitle"
            style="@style/basicMediumTextView"
            android:layout_marginStart="20dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="20dp"
            android:gravity="start"
            android:textColor="@color/main_black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/addCompleteLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:layout_marginBottom="50dp">
            <ImageView
                android:id="@+id/addCompleteMark"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/group_checkbox_e"
                android:layout_marginBottom="24dp"/>
            <TextView
                style="@style/basicMediumTextView"
                android:text="AS-EYE 등록이\n완료되었습니다"
                android:textColorHint="@color/main_black"
                android:textSize="24sp" />
        </LinearLayout>

        
        <TextView
            android:id="@+id/addCompleteContent"
            style="@style/basicTextView"
            android:textSize="16sp"
            android:textColor="@color/main_black"
            app:layout_constraintStart_toStartOf="@+id/addCompleteTitle"
            app:layout_constraintTop_toBottomOf="@+id/addCompleteTitle"
            android:layout_marginTop="6dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
