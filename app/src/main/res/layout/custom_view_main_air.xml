<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".view.activity.MainActivity">

        <ImageView
            android:id="@+id/airQCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cancel"
            app:tint="@color/theme_text_color"
            android:contentDescription="@string/cd_icon_cancel"
            android:layout_marginEnd="18dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/airQName"
            android:layout_alignBottom="@+id/airQName"/>

        <TextView
            android:id="@+id/airQName"
            style="@style/basicMediumTextView"
            android:textSize="20sp"
            android:textColor="@color/theme_text_color"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/airQExplainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/theme_text_color"
            android:lineHeight="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_below="@+id/airQName"
            android:layout_marginTop="12dp"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/airQLine"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/theme_line_color"
            android:layout_below="@+id/airQExplainText"
            android:layout_marginTop="24dp"/>

        <ImageView
            android:id="@+id/airQGraphIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="26dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/airQLine"/>

    </RelativeLayout>
</layout>
