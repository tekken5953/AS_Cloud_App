<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ae_device_bg_e"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/vpAeTitle"
        style="@style/basicMediumTextView"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="CO2(이산화탄소)"
        android:textColor="@color/theme_text_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/vpAeContent"
        style="@style/basicTextView"
        android:layout_below="@+id/vpAeTitle"
        android:layout_alignStart="@+id/vpAeTitle"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="20dp"
        android:text="수치가 높습니다. 창문을 열어 환기를 시켜주세요"
        android:textColor="@color/ae_sub_color"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/vpAeAlert"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@+id/vpAeTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:src="@drawable/caution_test" />
</RelativeLayout>